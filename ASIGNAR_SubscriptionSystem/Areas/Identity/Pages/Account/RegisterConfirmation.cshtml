@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration confirmation";
    ViewData["HideNav"] = true;
}

<style>
    .auth-page-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        background: #000000;
    }
    
    .auth-card {
        width: 100%;
        max-width: 500px;
        background: rgba(26, 30, 46, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 1rem;
        padding: 3rem 2.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        text-align: center;
    }
    
    .back-button {
        position: absolute;
        top: 2rem;
        left: 2rem;
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        transition: all 0.3s ease;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
    }
    
    .back-button:hover {
        color: #ffffff;
        background: rgba(255, 255, 255, 0.05);
    }
    
    .success-icon {
        width: 64px;
        height: 64px;
        background: rgba(34, 197, 94, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }
    
    .auth-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 0.75rem;
        letter-spacing: -0.02em;
    }
    
    .auth-message {
        color: rgba(255, 255, 255, 0.65);
        margin-bottom: 2rem;
        font-size: 0.9375rem;
        line-height: 1.6;
    }
    
    .dev-notice {
        background: rgba(99, 102, 241, 0.1);
        border: 1px solid rgba(99, 102, 241, 0.3);
        color: rgba(255, 255, 255, 0.8);
        padding: 1rem;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        margin-bottom: 1.5rem;
        text-align: left;
    }
    
    .dev-notice strong {
        color: #a5b4fc;
    }
    
    .confirmation-link {
        background: rgba(15, 18, 28, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #6366f1;
        padding: 0.75rem;
        border-radius: 0.5rem;
        font-size: 0.75rem;
        word-break: break-all;
        margin: 1rem 0;
        display: block;
    }
    
    .auth-submit-btn {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border: none;
        color: #ffffff;
        padding: 0.875rem 2rem;
        border-radius: 0.5rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }
    
    .auth-submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
        background: linear-gradient(135deg, #7c3aed 0%, #a855f7 100%);
        color: #ffffff;
    }
</style>

<a href="~/" class="back-button">
    <i class="bi bi-arrow-left"></i>
    <span>Back to Home</span>
</a>

<div class="auth-page-container">
    <div class="auth-card">
        <div class="success-icon">
            <i class="bi bi-check-circle-fill" style="font-size: 2rem; color: #86efac;"></i>
        </div>
        
        <h1 class="auth-title">Registration Complete!</h1>
        <p class="auth-message">
            Your account <strong>@Model.Email</strong> has been created successfully.
            <br><br>
            An administrator will confirm your email before you can log in.
        </p>
        
        <a asp-page="./Login" class="auth-submit-btn mb-3" style="display: inline-block; text-align: center;">
            <i class="bi bi-box-arrow-in-right me-2"></i>Go to Login
        </a>
    </div>
</div>
