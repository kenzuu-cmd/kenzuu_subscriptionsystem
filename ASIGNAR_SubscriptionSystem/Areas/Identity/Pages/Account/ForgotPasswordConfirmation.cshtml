@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Check your email";
    ViewData["HideNav"] = true;
}

<style>
    .auth-page-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        background: #000000;
    }
    
    .auth-card {
        width: 100%;
        max-width: 420px;
        background: rgba(26, 30, 46, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 1rem;
        padding: 3rem 2.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        text-align: center;
    }
    
    .back-button {
        position: absolute;
        top: 2rem;
        left: 2rem;
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        transition: all 0.3s ease;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
    }
    
    .back-button:hover {
        color: #ffffff;
        background: rgba(255, 255, 255, 0.05);
    }
    
    .success-icon {
        width: 64px;
        height: 64px;
        background: rgba(34, 197, 94, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }
    
    .auth-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 0.75rem;
        letter-spacing: -0.02em;
    }
    
    .auth-message {
        color: rgba(255, 255, 255, 0.65);
        margin-bottom: 2rem;
        font-size: 0.9375rem;
        line-height: 1.6;
    }
    
    .auth-link {
        color: #6366f1;
        text-decoration: none;
        font-size: 0.875rem;
        transition: all 0.2s ease;
    }
    
    .auth-link:hover {
        color: #8b5cf6;
    }
</style>

<a href="~/" class="back-button">
    <i class="bi bi-arrow-left"></i>
    <span>Back to Home</span>
</a>

<div class="auth-page-container">
    <div class="auth-card">
        <div class="success-icon">
            <i class="bi bi-envelope-check" style="font-size: 2rem; color: #86efac;"></i>
        </div>
        
        <h1 class="auth-title">Check your email</h1>
        <p class="auth-message">
            If an account exists with that email, we've sent password reset instructions.
            <br><br>
            <strong>Development Mode:</strong> Check the console logs for the reset link.
        </p>
        
        <a class="auth-link" asp-page="./Login">Return to login</a>
    </div>
</div>
