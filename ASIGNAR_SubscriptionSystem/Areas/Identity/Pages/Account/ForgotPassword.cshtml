@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    ViewData["HideNav"] = true;
}

<style>
    .auth-page-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        background: #000000;
    }
    
    .auth-card {
        width: 100%;
        max-width: 420px;
        background: rgba(26, 30, 46, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 1rem;
        padding: 3rem 2.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    }
    
    .back-button {
        position: absolute;
        top: 2rem;
        left: 2rem;
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        transition: all 0.3s ease;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
    }
    
    .back-button:hover {
        color: #ffffff;
        background: rgba(255, 255, 255, 0.05);
    }
    
    .auth-title {
        font-size: 2rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }
    
    .auth-subtitle {
        color: rgba(255, 255, 255, 0.55);
        margin-bottom: 2rem;
        font-size: 0.9375rem;
    }
    
    .auth-label {
        color: rgba(255, 255, 255, 0.9);
        font-weight: 500;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
        display: block;
    }
    
    .auth-input {
        background: rgba(15, 18, 28, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #ffffff;
        padding: 0.875rem 1rem;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        font-size: 0.9375rem;
        width: 100%;
    }
    
    .auth-input:focus {
        background: rgba(15, 18, 28, 0.95);
        border-color: #6366f1;
        color: #ffffff;
        outline: none;
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
    }
    
    .auth-input::placeholder {
        color: rgba(255, 255, 255, 0.35);
    }
    
    .auth-submit-btn {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border: none;
        color: #ffffff;
        padding: 0.875rem;
        border-radius: 0.5rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        width: 100%;
        cursor: pointer;
    }
    
    .auth-submit-btn:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
        background: linear-gradient(135deg, #7c3aed 0%, #a855f7 100%);
    }
    
    .auth-link {
        color: #6366f1;
        text-decoration: none;
        font-size: 0.875rem;
        transition: all 0.2s ease;
    }
    
    .auth-link:hover {
        color: #8b5cf6;
    }
    
    .error-message {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #fca5a5;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        margin-bottom: 1rem;
    }
</style>

<a href="~/" class="back-button">
    <i class="bi bi-arrow-left"></i>
    <span>Back to Home</span>
</a>

<div class="auth-page-container">
    <div class="auth-card">
        <h1 class="auth-title">Forgot password</h1>
        <p class="auth-subtitle">Enter your email and we'll send you reset instructions.</p>
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="error-message" role="alert"></div>
            
            <div class="mb-4">
                <label asp-for="Input.Email" class="auth-label">Email</label>
                <input asp-for="Input.Email" class="auth-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger small d-block mt-1"></span>
            </div>
            
            <button type="submit" class="auth-submit-btn mb-3">
                Send reset link
            </button>
            
            <div class="text-center">
                <a class="auth-link" asp-page="./Login">Back to login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
