<!-- Success Animation -->
<div class="success-animation" id="success-animation" role="alert" aria-live="polite">
    <div class="success-icon">
        <i class="bi bi-check-lg fs-1 text-white" aria-hidden="true"></i>
    </div>
    <h3 class="text-white fw-bold mb-2">Success!</h3>
    <p class="text-white-50">Subscription added successfully</p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function() {
            'use strict';
            
            // === ELEMENTS ===
            const form = document.getElementById('subscription-form');
            const submitBtn = document.getElementById('submit-button');
            const inputs = {
                serviceName: document.getElementById('service-name-input'),
                price: document.getElementById('price-input'),
                cycle: document.getElementById('cycle-input'),
                category: document.getElementById('category-input'),
                date: document.getElementById('date-input')
            };
            
            // Custom number controls
            const priceIncrementBtn = document.getElementById('price-increment');
            const priceDecrementBtn = document.getElementById('price-decrement');
            
            // === INITIALIZATION ===
            const today = new Date().toISOString().split('T')[0];
            inputs.date.setAttribute('min', today);
            
            // === CUSTOM NUMBER INPUT CONTROLS ===
            function incrementPrice() {
                const currentValue = parseFloat(inputs.price.value) || 0;
                const step = parseFloat(inputs.price.step) || 1;
                const max = parseFloat(inputs.price.max) || Infinity;
                const newValue = Math.min(currentValue + step, max);
                inputs.price.value = newValue.toFixed(2);
                inputs.price.dispatchEvent(new Event('input', { bubbles: true }));
                inputs.price.focus();
            }
            
            function decrementPrice() {
                const currentValue = parseFloat(inputs.price.value) || 0;
                const step = parseFloat(inputs.price.step) || 1;
                const min = parseFloat(inputs.price.min) || 0;
                const newValue = Math.max(currentValue - step, min);
                inputs.price.value = newValue.toFixed(2);
                inputs.price.dispatchEvent(new Event('input', { bubbles: true }));
                inputs.price.focus();
            }
            
            // Attach number control listeners
            priceIncrementBtn.addEventListener('click', incrementPrice);
            priceDecrementBtn.addEventListener('click', decrementPrice);
            
            // Keyboard support for number controls
            inputs.price.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    incrementPrice();
                } else if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    decrementPrice();
                }
            });
            
            // === VALIDATION ===
            const validators = {
                serviceName: (value) => {
                    const trimmed = value.trim();
                    return trimmed.length >= 2 && trimmed.length <= 50;
                },
                price: (value) => {
                    const num = parseFloat(value);
                    return !isNaN(num) && num >= 1 && num <= 999999;
                },
                cycle: (value) => value && value !== '',
                category: (value) => value && value !== '',
                date: (value) => {
                    if (!value) return false;
                    const selectedDate = new Date(value);
                    const todayDate = new Date(today);
                    return selectedDate >= todayDate;
                }
            };
            
            // Validates a single field and updates UI accordingly
            // fieldName - The field to validate
            // returns boolean - Whether the field is valid
            function validateField(fieldName) {
                const input = inputs[fieldName];
                const value = input.value;
                const isValid = validators[fieldName](value);
                
                // Get feedback elements
                const fieldId = fieldName.replace(/([A-Z])/g, '-$1').toLowerCase();
                const errorEl = document.getElementById(`${fieldId}-error`);
                const successEl = document.getElementById(`${fieldId}-success`);
                
                if (isValid) {
                    input.classList.remove('is-invalid');
                    input.classList.add('is-valid');
                    input.setAttribute('aria-invalid', 'false');
                    if (errorEl) errorEl.classList.remove('show');
                    if (successEl) successEl.classList.add('show');
                    return true;
                } else {
                    input.classList.remove('is-valid');
                    input.classList.add('is-invalid');
                    input.setAttribute('aria-invalid', 'true');
                    if (errorEl) errorEl.classList.add('show');
                    if (successEl) successEl.classList.remove('show');
                    return false;
                }
            }
            
            // === EVENT LISTENERS ===
            
            // Validate on blur
            Object.keys(inputs).forEach(key => {
                inputs[key].addEventListener('blur', () => {
                    if (inputs[key].value) {
                        validateField(key);
                    }
                });
                
                // Re-validate on input if field has error
                inputs[key].addEventListener('input', () => {
                    if (inputs[key].classList.contains('is-invalid')) {
                        validateField(key);
                    }
                });
            });
            
            // === FORM SUBMISSION ===
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Validate all fields
                let isValid = true;
                Object.keys(inputs).forEach(key => {
                    if (!validateField(key)) {
                        isValid = false;
                    }
                });
                
                if (!isValid) {
                    // Scroll to first error with smooth animation
                    const firstInvalid = form.querySelector('.is-invalid');
                    if (firstInvalid) {
                        firstInvalid.scrollIntoView({ 
                            behavior: 'smooth', 
                            block: 'center' 
                        });
                        // Announce error to screen readers
                        firstInvalid.focus();
                    }
                    return;
                }
                
                // Show loading state
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner" role="status" aria-label="Saving"></span> Saving...';
                
                // Simulate async save (in production, this would be form.submit())
                setTimeout(() => {
                    // Show success animation
                    const successAnim = document.getElementById('success-animation');
                    successAnim.classList.add('show');
                    
                    // Redirect after animation
                    setTimeout(() => {
                        // In production: form.submit() or use the actual redirect
                        window.location.href = '/Dashboard';
                    }, 1500);
                }, 1000);
            });
            
            // === HELPER ICON ACCESSIBILITY ===
            document.querySelectorAll('.helper-icon').forEach(icon => {
                icon.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        // Show tooltip or announce hint
                        const hint = this.getAttribute('title');
                        if (hint) {
                            alert(hint); // In production, use a proper tooltip
                        }
                    }
                });
            });
            
            // === AUTO-FOCUS ===
            setTimeout(() => {
                inputs.serviceName.focus();
            }, 100);
            
        })();
    </script>
}
