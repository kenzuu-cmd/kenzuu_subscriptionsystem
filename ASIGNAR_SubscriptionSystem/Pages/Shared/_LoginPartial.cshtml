@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isAdmin = HttpContextAccessor.HttpContext?.Session.GetString("IsAdmin") == "true";
    var adminUsername = HttpContextAccessor.HttpContext?.Session.GetString("AdminUsername");
}

@if (isAdmin)
{
    <!-- Admin User Dropdown -->
    <li class="nav-item dropdown">
        <a class="nav-link nav-link-clean dropdown-toggle d-flex align-items-center gap-2" 
           href="#" 
           role="button" 
           data-bs-toggle="dropdown" 
           aria-expanded="false"
           style="min-width: 44px; min-height: 44px;"
           title="Admin: @adminUsername">
            <div class="admin-avatar" style="width: 36px; height: 36px; background: linear-gradient(135deg, #6366f1, #8b5cf6); border-radius: 10px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);">
                <i class="bi bi-shield-fill" style="font-size: 1.125rem; color: #ffffff;"></i>
            </div>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" style="background: rgba(20, 20, 30, 0.98); backdrop-filter: blur(20px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4); min-width: 220px; padding: 0.5rem;">
            <li class="px-3 py-2" style="border-bottom: 1px solid rgba(255, 255, 255, 0.1);">
                <div style="color: #9ca3af; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em;">Admin Account</div>
                <div style="color: #ffffff; font-weight: 600; margin-top: 0.25rem;">@adminUsername</div>
            </li>
            <li>
                <a class="dropdown-item" asp-page="/AdminProfile" style="color: #e5e7eb; padding: 0.625rem 1rem; border-radius: 8px; transition: all 0.2s ease; margin: 0.25rem 0;">
                    <i class="bi bi-person-gear me-2" style="color: #6366f1;"></i>Profile Settings
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-page="/DeveloperOptions" style="color: #e5e7eb; padding: 0.625rem 1rem; border-radius: 8px; transition: all 0.2s ease; margin: 0.25rem 0;">
                    <i class="bi bi-code-slash me-2" style="color: #8b5cf6;"></i>Developer Options
                </a>
            </li>
            <li><hr class="dropdown-divider" style="border-color: rgba(255, 255, 255, 0.1); margin: 0.5rem 0;"></li>
            <li>
                <a class="dropdown-item" href="/AdminLogout" style="color: #fca5a5; padding: 0.625rem 1rem; border-radius: 8px; transition: all 0.2s ease; margin: 0.25rem 0; cursor: pointer;">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                </a>
            </li>
        </ul>
    </li>
}
else if (SignInManager.IsSignedIn(User))
{
    <!-- Regular User Dropdown -->
    <li class="nav-item dropdown">
        <a class="nav-link nav-link-clean dropdown-toggle d-flex align-items-center gap-2" 
           href="#" 
           role="button" 
           data-bs-toggle="dropdown" 
           aria-expanded="false"
           style="min-width: 44px; min-height: 44px;">
            <i class="bi bi-person-circle" style="font-size: 1.25rem;"></i>
            <span class="d-none d-lg-inline">@UserManager.GetUserName(User)</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" style="background: rgba(20, 20, 30, 0.95); backdrop-filter: blur(20px); border: 1px solid rgba(255, 255, 255, 0.1);">
            <li>
                <a class="dropdown-item text-white" asp-page="/Settings">
                    <i class="bi bi-gear me-2"></i>Settings
                </a>
            </li>
            <li><hr class="dropdown-divider" style="border-color: rgba(255, 255, 255, 0.1);"></li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Home", new { area = "" })" method="post">
                    <button type="submit" class="dropdown-item text-white" style="cursor: pointer;">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <!-- Public Navigation -->
    <li class="nav-item">
        <a class="nav-link nav-link-clean" asp-area="Identity" asp-page="/Account/Login" aria-label="Login">
            <i class="bi bi-box-arrow-in-right"></i>
            <span>Login</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary rounded-pill px-4 py-2 fw-semibold d-flex align-items-center gap-2" 
           asp-area="Identity" 
           asp-page="/Account/Register"
           style="box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4); transition: all 0.3s ease; white-space: nowrap;"
           aria-label="Register for free account">
            <span>Sign Up Free</span>
            <i class="bi bi-arrow-right" aria-hidden="true"></i>
        </a>
    </li>
    <li class="nav-item">
        <a class="btn btn-link text-white-50 p-2" 
           asp-page="/AdminLogin"
           style="opacity: 0.3; transition: opacity 0.3s ease; min-width: 44px; min-height: 44px;"
           onmouseover="this.style.opacity='0.6';"
           onmouseout="this.style.opacity='0.3';"
           aria-label="Admin access"
           title="">
            <i class="bi bi-shield-lock" style="font-size: 1.125rem;" aria-hidden="true"></i>
        </a>
    </li>
}

<style>
    .dropdown-item:hover {
        background: rgba(99, 102, 241, 0.15) !important;
        color: #ffffff !important;
    }
</style>
