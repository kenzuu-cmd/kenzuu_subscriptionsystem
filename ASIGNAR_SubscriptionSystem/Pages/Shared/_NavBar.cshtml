@* ========================================
   UNIFIED NAVIGATION BAR
   Professional, modern design with sticky behavior
   ======================================== *@

@{
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
    var isLandingPage = currentPage == "/Home";
}

<nav class="navbar navbar-expand-lg navbar-dark sticky-top" 
     style="background: rgba(0, 0, 0, 0.85); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px); border-bottom: 1px solid rgba(255, 255, 255, 0.1); box-shadow: 0 4px 24px rgba(0, 0, 0, 0.25);" 
     role="navigation" 
     aria-label="Main navigation">
    <div class="container">
        <a class="navbar-brand fw-bold text-white d-flex align-items-center gap-2 py-2" 
           asp-area="" 
           asp-page="/Home" 
           aria-label="SubscriptionSystem Home"
           style="font-size: 1.25rem; transition: all 0.3s ease;">
            <i class="bi bi-wallet2 fs-3 text-primary" aria-hidden="true" style="filter: drop-shadow(0 0 8px rgba(99, 102, 241, 0.5));"></i> 
            <span style="letter-spacing: -0.02em;">SubscriptionSystem</span>
        </a>

        <button class="navbar-toggler border-0 shadow-none" 
                type="button" 
                data-bs-toggle="collapse" 
                data-bs-target="#navbarContent" 
                aria-controls="navbarContent"
                aria-expanded="false" 
                aria-label="Toggle navigation menu"
                style="padding: 0.75rem; min-width: 44px; min-height: 44px;">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            @if (isLandingPage)
            {
                <!-- Landing Page Navigation -->
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item px-2">
                        <a class="nav-link text-white fw-medium position-relative" 
                           href="#features"
                           style="transition: all 0.3s ease; padding: 0.5rem 0.75rem;">
                            Features
                        </a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link text-white fw-medium position-relative" 
                           href="#pricing"
                           style="transition: all 0.3s ease; padding: 0.5rem 0.75rem;">
                            Pricing
                        </a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link text-white fw-medium position-relative" 
                           href="#testimonials"
                           style="transition: all 0.3s ease; padding: 0.5rem 0.75rem;">
                            Testimonials
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto align-items-lg-center gap-2">
                    <li class="nav-item">
                        <a href="/Dashboard" class="btn btn-primary rounded-pill px-4 py-2 fw-semibold d-flex align-items-center gap-2" 
                           style="box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4); transition: all 0.3s ease;"
                           aria-label="Get started with dashboard">
                            <span>Get Started Free</span>
                            <i class="bi bi-arrow-right" aria-hidden="true"></i>
                        </a>
                    </li>
                </ul>
            }
            else
            {
                <!-- App Navigation - Clean & Focused -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-1">
                    <li class="nav-item">
                        <a class="nav-link nav-link-clean @(currentPage == "/Home" ? "active" : "")" 
                           asp-area="" 
                           asp-page="/Home"
                           aria-label="Home">
                            <i class="bi bi-house"></i>
                            <span>Home</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-clean @(currentPage == "/Dashboard" ? "active" : "")" 
                           asp-area="" 
                           asp-page="/Dashboard"
                           aria-label="Dashboard">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-clean @(currentPage == "/Reports" ? "active" : "")" 
                           asp-area="" 
                           asp-page="/Reports"
                           aria-label="Reports & Analytics">
                            <i class="bi bi-graph-up"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                </ul>
                
                <!-- Right Side Actions - Consolidated -->
                <ul class="navbar-nav ms-auto align-items-lg-center gap-2">
                    <li class="nav-item dropdown notification-container">
                        <button class="btn btn-link nav-link position-relative notification-btn" 
                                id="notification-button" 
                                data-action="toggle-notifications"
                                aria-label="View notifications"
                                aria-haspopup="true"
                                aria-expanded="false"
                                aria-controls="notification-dropdown"
                                style="min-width: 44px; min-height: 44px;"
                                title="Notifications">
                            <i class="bi bi-bell" aria-hidden="true"></i>
                            <span class="notification-badge" id="notification-badge" aria-live="polite" aria-atomic="true">0</span>
                        </button>
                        <div class="notification-dropdown" 
                             id="notification-dropdown" 
                             role="menu" 
                             aria-labelledby="notification-button"
                             tabindex="-1">
                            <!-- Populated by notifications.js -->
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-icon @(currentPage == "/Settings" ? "active" : "")" 
                           asp-area="" 
                           asp-page="/Settings"
                           aria-label="Settings"
                           title="Settings">
                            <i class="bi bi-gear"></i>
                        </a>
                    </li>
                </ul>
            }
        </div>
    </div>
</nav>

<style>
    /* ========================================
       CLEAN NAVIGATION STYLES
       ======================================== */
    
    /* Brand hover */
    .navbar-brand:hover {
        transform: scale(1.02);
        opacity: 0.9;
    }
    
    /* Clean nav link styling */
    .nav-link-clean {
        color: rgba(255, 255, 255, 0.75) !important;
        font-weight: 500;
        padding: 0.625rem 1rem !important;
        border-radius: 0.625rem;
        transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        position: relative;
    }
    
    .nav-link-clean i {
        font-size: 1.125rem;
    }
    
    .nav-link-clean:hover {
        color: #ffffff !important;
        background: rgba(255, 255, 255, 0.05);
        transform: translateY(-1px);
    }
    
    .nav-link-clean.active {
        color: #ffffff !important;
        background: rgba(99, 102, 241, 0.2);
        box-shadow: inset 0 0 0 1px rgba(99, 102, 241, 0.4);
    }
    
    .nav-link-clean.active::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 1rem;
        right: 1rem;
        height: 2px;
        background: linear-gradient(90deg, #6366f1, #8b5cf6);
        border-radius: 2px 2px 0 0;
    }
    
    /* Icon-only nav link (for Settings) */
    .nav-link-icon {
        color: rgba(255, 255, 255, 0.6) !important;
        padding: 0.625rem !important;
        border-radius: 0.5rem;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.25s ease;
    }
    
    .nav-link-icon i {
        font-size: 1.25rem;
    }
    
    .nav-link-icon:hover {
        color: #ffffff !important;
        background: rgba(255, 255, 255, 0.08);
    }
    
    .nav-link-icon.active {
        color: #6366f1 !important;
        background: rgba(99, 102, 241, 0.15);
    }
    
    /* Notification button */
    .notification-btn {
        color: rgba(255, 255, 255, 0.6) !important;
        padding: 0.625rem !important;
        border-radius: 0.5rem;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.25s ease;
        border: none;
    }
    
    .notification-btn:hover {
        color: #ffffff !important;
        background: rgba(255, 255, 255, 0.08);
    }
    
    .notification-btn i {
        font-size: 1.25rem;
    }
    
    .notification-badge {
        position: absolute;
        top: 4px;
        right: 4px;
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: #ffffff;
        font-size: 0.625rem;
        font-weight: 700;
        padding: 0.125rem 0.375rem;
        border-radius: 1rem;
        line-height: 1;
        box-shadow: 0 2px 8px rgba(239, 68, 68, 0.5);
        display: none;
    }
    
    .notification-badge.show {
        display: block;
    }
    
    /* Smooth navbar shadow on scroll */
    .navbar.scrolled {
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.35);
    }
    
    /* Mobile menu improvements */
    @@media (max-width: 991.98px) {
        .navbar-collapse {
            background: rgba(0, 0, 0, 0.98);
            backdrop-filter: blur(20px);
            margin: 1rem -1rem -1rem;
            padding: 1.5rem 1rem;
            border-radius: 0 0 1rem 1rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .navbar-nav {
            gap: 0.5rem;
        }
        
        .nav-link-clean {
            justify-content: flex-start;
            padding: 0.75rem 1rem !important;
        }
        
        .nav-item .btn {
            width: 100%;
            justify-content: center;
        }
        
        /* Landing page nav links on mobile */
        .navbar-nav.mx-auto .nav-link {
            padding: 0.75rem 1rem !important;
            border-radius: 0.5rem;
            transition: background 0.2s ease;
        }
        
        .navbar-nav.mx-auto .nav-link:hover {
            background: rgba(255, 255, 255, 0.05);
        }
    }
    
    /* Tablet breakpoint */
    @@media (max-width: 767.98px) {
        .navbar-brand {
            font-size: 1.125rem !important;
        }
        
        .navbar-brand i {
            font-size: 1.5rem !important;
        }
        
        .navbar-toggler {
            padding: 0.375rem !important;
        }
    }
    
    /* Small phones */
    @@media (max-width: 575.98px) {
        .navbar-brand {
            font-size: 1rem !important;
            gap: 0.375rem !important;
        }
        
        .navbar-brand i {
            font-size: 1.25rem !important;
        }
        
        .navbar {
            padding-top: 0.75rem;
            padding-bottom: 0.75rem;
        }
        
        .navbar-collapse {
            padding: 1rem;
        }
        
        .nav-link-clean {
            padding: 0.625rem 0.875rem !important;
            font-size: 0.9375rem;
        }
        
        .nav-link-clean i {
            font-size: 1rem;
        }
        
        .btn-hero {
            padding: 0.8125rem 1.25rem !important;
            font-size: 0.9375rem !important;
        }
    }
</style>
