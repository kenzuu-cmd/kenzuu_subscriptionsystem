@* ========================================
   UNIFIED FOOTER
   Professional, modern design with balanced layout
   ======================================== *@

<footer class="footer mt-auto" 
        style="background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.3) 100%); border-top: 1px solid rgba(255, 255, 255, 0.08); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);" 
        role="contentinfo">
    <div class="container py-5">
        <div class="row g-4 py-4">
            <!-- Brand Column -->
            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <div class="d-flex align-items-center gap-2 mb-3">
                    <i class="bi bi-wallet2 fs-3 text-primary" aria-hidden="true" style="filter: drop-shadow(0 0 8px rgba(99, 102, 241, 0.5));"></i>
                    <h5 class="fw-bold text-white mb-0" style="font-size: 1.25rem; letter-spacing: -0.02em;">SubscriptionSystem</h5>
                </div>
                <p class="text-secondary mb-4" style="line-height: 1.6; max-width: 320px;">
                    Never lose money on forgotten subscriptions. Track, manage, and save with intelligent reminders.
                </p>
                <div class="d-flex gap-3">
                    <a href="#" 
                       class="text-secondary d-flex align-items-center justify-content-center rounded-circle" 
                       aria-label="Twitter"
                       style="width: 40px; height: 40px; background: rgba(255, 255, 255, 0.05); transition: all 0.3s ease; text-decoration: none;">
                        <i class="bi bi-twitter fs-5" aria-hidden="true"></i>
                    </a>
                    <a href="#" 
                       class="text-secondary d-flex align-items-center justify-content-center rounded-circle" 
                       aria-label="GitHub"
                       style="width: 40px; height: 40px; background: rgba(255, 255, 255, 0.05); transition: all 0.3s ease; text-decoration: none;">
                        <i class="bi bi-github fs-5" aria-hidden="true"></i>
                    </a>
                    <a href="#" 
                       class="text-secondary d-flex align-items-center justify-content-center rounded-circle" 
                       aria-label="LinkedIn"
                       style="width: 40px; height: 40px; background: rgba(255, 255, 255, 0.05); transition: all 0.3s ease; text-decoration: none;">
                        <i class="bi bi-linkedin fs-5" aria-hidden="true"></i>
                    </a>
                </div>
            </div>

            <!-- Product Links -->
            <div class="col-lg-2 col-md-3 col-6">
                <h6 class="text-white fw-semibold mb-3" style="font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em;">Product</h6>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <a href="#features" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Features
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="#pricing" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Pricing
                        </a>
                    </li>
                    <li class="mb-2">
                        <a asp-page="/Dashboard" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Dashboard
                        </a>
                    </li>
                    <li class="mb-2">
                        <a asp-page="/Reports" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Reports
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Company Links -->
            <div class="col-lg-2 col-md-3 col-6">
                <h6 class="text-white fw-semibold mb-3" style="font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em;">Company</h6>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <a href="#about" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            About Us
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="#careers" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Careers
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="#contact" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Contact
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="#blog" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Blog
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Resources Links -->
            <div class="col-lg-2 col-md-6 col-6">
                <h6 class="text-white fw-semibold mb-3" style="font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em;">Resources</h6>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <a href="#support" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Support
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="#docs" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Documentation
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="#privacy" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Privacy Policy
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="#terms" 
                           class="text-secondary text-decoration-none d-inline-block" 
                           style="transition: all 0.3s ease; font-size: 0.9375rem;">
                            Terms of Service
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Newsletter -->
            <div class="col-lg-2 col-md-6">
                <h6 class="text-white fw-semibold mb-3" style="font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em;">Stay Updated</h6>
                <p class="text-secondary small mb-3">
                    Get tips on saving money
                </p>
                <form class="d-flex flex-column gap-2">
                    <input type="email" 
                           class="form-control form-control-sm glass-input" 
                           placeholder="Your email"
                           aria-label="Email for newsletter"
                           style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); color: white; padding: 0.5rem 0.75rem; border-radius: 0.5rem;">
                    <button type="submit" 
                            class="btn btn-sm btn-primary rounded-pill"
                            style="padding: 0.5rem 1rem; font-weight: 600;">
                        Subscribe
                    </button>
                </form>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="pt-4 mt-4" style="border-top: 1px solid rgba(255, 255, 255, 0.06);">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <p class="text-secondary small mb-0" style="opacity: 0.75;">
                        &copy; 2025 SubscriptionSystem. All rights reserved.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="d-flex justify-content-center justify-content-md-end align-items-center gap-3 flex-wrap">
                        <span class="text-secondary small d-flex align-items-center gap-2">
                            <i class="bi bi-shield-check text-success" aria-hidden="true"></i>
                            Secure & Private
                        </span>
                        <span class="text-secondary small d-flex align-items-center gap-2">
                            <i class="bi bi-heart-fill text-danger" aria-hidden="true"></i>
                            Made with care
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    /* Footer hover effects */
    .footer a:hover {
        color: var(--color-primary) !important;
        transform: translateX(4px);
    }
    
    .footer .rounded-circle:hover {
        background: rgba(99, 102, 241, 0.15) !important;
        color: var(--color-primary) !important;
        transform: translateY(-2px);
    }
    
    .footer .glass-input:focus {
        outline: none;
        border-color: rgba(99, 102, 241, 0.5);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
    }
    
    /* Light mode footer adjustments */
    [data-theme="light"] .footer {
        background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.02) 100%);
        border-top-color: rgba(0, 0, 0, 0.08);
    }
    
    [data-theme="light"] .footer .rounded-circle {
        background: rgba(0, 0, 0, 0.05);
    }
    
    [data-theme="light"] .footer .glass-input {
        background: rgba(0, 0, 0, 0.03);
        border-color: rgba(0, 0, 0, 0.1);
    }
</style>
