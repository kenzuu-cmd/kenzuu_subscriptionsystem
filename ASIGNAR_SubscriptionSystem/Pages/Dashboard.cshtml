@page
@model SubscriptionSystem.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageTitle"] = "Dashboard Overview";
    ViewData["PageSubtitle"] = "Your subscription analytics at a glance";
    ViewData["PrimaryActionText"] = "View All Subscriptions";
    ViewData["PrimaryActionUrl"] = "/Subscriptions/Index";
    ViewData["PrimaryActionIcon"] = "bi-list-ul";
    ViewData["SecondaryActionText"] = "View Reports";
    ViewData["SecondaryActionUrl"] = "/Reports";
    ViewData["SecondaryActionIcon"] = "bi-graph-up";

    string GetColorClass(string name)
    {
        var len = name.Length;
        if (len % 4 == 0) return "bg-indigo-subtle";
        if (len % 4 == 1) return "bg-rose-subtle";
        if (len % 4 == 2) return "bg-emerald-subtle";
        return "bg-amber-subtle";
    }

    string GetTimeRemaining(DateTime date)
    {
        var days = (date - DateTime.Today).TotalDays;
        if (days < 0) return "Overdue";
        if (days == 0) return "Today";
        if (days == 1) return "Tomorrow";
        return $"In {Math.Round(days)} days";
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/app-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard-hero-mobile.css" asp-append-version="true" />
}

<!-- Dashboard Overview Page -->
<div class="dashboard-container">
    <div class="container-fluid px-4 py-4">
        
        <!-- Breadcrumb Navigation -->
        @await Html.PartialAsync("_Breadcrumb")
        
        <!-- Page Header with Actions -->
        @await Html.PartialAsync("_PageHeader")

        <!-- Key Metrics Grid -->
        @if (!Model.IsDatabaseAvailable)
        {
            <!-- Database Error Alert -->
            <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                <div>
                    <h5 class="alert-heading mb-1">Database Not Available</h5>
                    <p class="mb-0">@Model.ErrorMessage</p>
                    <a asp-page="/Subscriptions/Create" class="btn btn-sm btn-primary mt-2">
                        <i class="bi bi-arrow-clockwise me-2"></i>
                        Try Again
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="metrics-grid">
                <div class="row g-4">
                    <div class="col-xl-3 col-lg-6 col-md-6">
                        <div class="stat-card stat-card-hover">
                            <div class="stat-card-body">
                                <div class="stat-icon-wrapper stat-icon-primary">
                                    <i class="bi bi-wallet2"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-label">Monthly Burn</div>
                                    <div class="stat-value"><span data-currency>₱</span>@Model.TotalMonthly.ToString("N2")</div>
                                    <div class="stat-meta">
                                        <i class="bi bi-arrow-repeat"></i>
                                        <span>Recurring every 30 days</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-6 col-md-6">
                        <div class="stat-card stat-card-hover">
                            <div class="stat-card-body">
                                <div class="stat-icon-wrapper stat-icon-success">
                                    <i class="bi bi-layers"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-label">Active Subscriptions</div>
                                    <div class="stat-value">@Model.ActiveCount</div>
                                    <div class="stat-meta stat-meta-success">
                                        <i class="bi bi-check-circle"></i>
                                        <span>All services tracked</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-6 col-md-6">
                        <div class="stat-card stat-card-hover">
                            <div class="stat-card-body">
                                <div class="stat-icon-wrapper stat-icon-info">
                                    <i class="bi bi-graph-up"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-label">Yearly Projection</div>
                                    <div class="stat-value"><span data-currency>₱</span>@Model.YearlyProjected.ToString("N2")</div>
                                    <div class="stat-meta">
                                        <i class="bi bi-calendar-check"></i>
                                        <span>Est. Annual Run Rate</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-6 col-md-6">
                        <div class="stat-card stat-card-hover">
                            <div class="stat-card-body">
                                <div class="stat-icon-wrapper stat-icon-warning">
                                    <i class="bi bi-bell"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-label">Due Soon</div>
                                    <div class="stat-value">@Model.DueSoonCount</div>
                                    <div class="stat-meta">
                                        <i class="bi bi-clock"></i>
                                        <span>Next 5 days</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Main Content Grid -->
        <div class="content-grid">
            <div class="row g-4">
                
                <!-- Left Column: Quick Insights -->
                <div class="col-lg-8">
                    
                    <!-- Top Subscriptions -->
                    <div class="table-card mb-4">
                        <div class="table-card-header">
                            <h5 class="table-title mb-0">
                                <i class="bi bi-star me-2 text-warning"></i>
                                Top 5 Subscriptions by Cost
                            </h5>
                            <a asp-page="/Subscriptions/Index" class="btn btn-sm btn-outline-light">
                                View All
                                <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                        
                        @if (Model.TopSubscriptions.Count == 0)
                        {
                            <div class="empty-state py-5">
                                <div class="text-center">
                                    <i class="bi bi-inbox display-4 text-muted mb-3"></i>
                                    <h5 class="text-white mb-2">No Subscriptions Yet</h5>
                                    <p class="text-muted mb-3">Start by adding your first subscription</p>
                                    <a asp-page="/Subscriptions/Create" class="btn btn-primary">
                                        <i class="bi bi-plus-lg me-2"></i>
                                        Add Subscription
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="subscription-table">
                                    <thead>
                                        <tr>
                                            <th>Service</th>
                                            <th>Cost</th>
                                            <th>Cycle</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.TopSubscriptions)
                                        {
                                            var colorClass = GetColorClass(item.ServiceName);
                                            var initial = item.ServiceName.Length > 0 ? item.ServiceName.Substring(0, 1).ToUpper() : "?";

                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center gap-3">
                                                        <div class="service-avatar @colorClass">@initial</div>
                                                        <div>
                                                            <div class="fw-bold text-white">@item.ServiceName</div>
                                                            <small class="text-muted">@item.Category</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="fw-semibold text-white font-monospace"><span data-currency>₱</span>@item.Price.ToString("N2")</span>
                                                </td>
                                                <td>
                                                    <span class="badge badge-secondary">@item.BillingCycle</span>
                                                </td>
                                                <td class="text-end">
                                                    <a asp-page="/Subscriptions/Details" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-light" title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>

                    <!-- Quick Actions Card -->
                    <div class="sidebar-card">
                        <h5 class="sidebar-card-title">
                            <i class="bi bi-lightning me-2 text-warning"></i>
                            Quick Actions
                        </h5>
                        <div class="quick-actions-grid">
                            <a asp-page="/Subscriptions/Create" class="quick-action-item">
                                <div class="quick-action-icon">
                                    <i class="bi bi-plus-lg"></i>
                                </div>
                                <span>Add New</span>
                            </a>
                            <a asp-page="/Subscriptions/Index" class="quick-action-item">
                                <div class="quick-action-icon">
                                    <i class="bi bi-list-ul"></i>
                                </div>
                                <span>View All</span>
                            </a>
                            <a asp-page="/Reports" class="quick-action-item">
                                <div class="quick-action-icon">
                                    <i class="bi bi-graph-up"></i>
                                </div>
                                <span>Reports</span>
                            </a>
                            <a asp-page="/Settings" class="quick-action-item">
                                <div class="quick-action-icon">
                                    <i class="bi bi-gear"></i>
                                </div>
                                <span>Settings</span>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Upcoming Payments -->
                <div class="col-lg-4">
                    <div class="sidebar-card">
                        <h5 class="sidebar-card-title">
                            <i class="bi bi-calendar-event me-2"></i>
                            Upcoming Payments
                        </h5>
                        
                        @if (Model.UpcomingPayments.Count == 0)
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-calendar-check display-4 text-muted mb-3"></i>
                                <p class="text-muted mb-0">No payments due in the next 7 days</p>
                            </div>
                        }
                        else
                        {
                            <div class="reminder-list">
                                @foreach (var payment in Model.UpcomingPayments)
                                {
                                    var isUrgent = (payment.NextPaymentDate - DateTime.Today).TotalDays <= 3;
                                    var daysUntil = Math.Round((payment.NextPaymentDate - DateTime.Today).TotalDays);
                                    var badgeClass = isUrgent ? "badge-danger" : 
                                                    daysUntil <= 5 ? "badge-warning" : "badge-info";

                                    <div class="reminder-item">
                                        <div class="reminder-header">
                                            <span class="reminder-title">@payment.ServiceName</span>
                                            <span class="badge @badgeClass">@GetTimeRemaining(payment.NextPaymentDate)</span>
                                        </div>
                                        <p class="reminder-text"><span data-currency>₱</span>@payment.Price.ToString("N2") - @payment.BillingCycle</p>
                                        <div class="reminder-actions">
                                            <a asp-page="/Subscriptions/Details" asp-route-id="@payment.Id" 
                                               class="btn btn-sm btn-outline-light">View</a>
                                            <a asp-page="/Subscriptions/Edit" asp-route-id="@payment.Id" 
                                               class="btn btn-sm btn-link text-muted">Edit</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        
                        @if (Model.UpcomingPayments.Count > 0)
                        {
                            <div class="mt-3 text-center">
                                <a asp-page="/Subscriptions/Index" class="btn btn-sm btn-outline-light w-100">
                                    View All Subscriptions
                                    <i class="bi bi-arrow-right ms-1"></i>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/currency-manager.js" asp-append-version="true"></script>
    @* Temporarily disabled for debugging *@
    @* <script src="~/js/dashboard-premium.js" asp-append-version="true"></script> *@
}

