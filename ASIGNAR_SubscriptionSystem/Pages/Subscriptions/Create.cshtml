@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function() {
            'use strict';
            
            // === ELEMENTS ===
            const form = document.getElementById('subscription-form');
            const priceInput = document.getElementById('Subscription_Price');
            const priceIncrementBtn = document.getElementById('price-increment');
            const priceDecrementBtn = document.getElementById('price-decrement');
            const dateInput = document.getElementById('Subscription_NextPaymentDate');
            const submitButton = document.getElementById('submit-button');
            const announcements = document.getElementById('form-announcements');
            
            // All form inputs for validation
            const allInputs = form.querySelectorAll('input[aria-required="true"], select[aria-required="true"]');
            
            // Track which fields have been touched
            const touchedFields = new Set();
            
            // === INITIALIZATION ===
            const today = new Date().toISOString().split('T')[0];
            if (dateInput) {
                dateInput.setAttribute('min', today);
                // Set default value to today
                if (!dateInput.value) {
                    dateInput.value = today;
                }
            }
            
            // Hide all validation messages on load
            document.querySelectorAll('.text-danger').forEach(el => {
                el.classList.remove('show');
            });
            
            // === PROGRESSIVE VALIDATION ===
            // Only show validation after field has been touched (blur event)
            allInputs.forEach(input => {
                // Mark field as touched on blur
                input.addEventListener('blur', function() {
                    touchedFields.add(this.id);
                    validateField(this);
                });
                
                // Real-time validation only for touched fields
                input.addEventListener('input', function() {
                    if (touchedFields.has(this.id)) {
                        validateField(this);
                    }
                });
            });
            
            function validateField(field) {
                const errorSpan = document.getElementById(field.getAttribute('aria-describedby')?.split(' ').find(id => id.includes('error')));
                if (!errorSpan) return;
                
                let isValid = field.checkValidity();
                let errorMessage = '';
                
                // Custom validation for specific fields
                if (field.id === 'Subscription_Price') {
                    const value = parseFloat(field.value);
                    if (!value || value <= 0) {
                        isValid = false;
                        errorMessage = 'Amount must be at least ?0.01';
                    }
                } else if (field.id === 'Subscription_ServiceName') {
                    if (!field.value.trim()) {
                        isValid = false;
                        errorMessage = 'Service name is required';
                    } else if (field.value.trim().length < 2) {
                        isValid = false;
                        errorMessage = 'Service name must be at least 2 characters';
                    }
                } else if (field.tagName === 'SELECT' && !field.value) {
                    isValid = false;
                    errorMessage = 'Please select an option';
                } else if (field.type === 'date' && !field.value) {
                    isValid = false;
                    errorMessage = 'Next payment date is required';
                }
                
                // Update visual state
                const inputGroup = field.closest('.input-group-modern') || field.closest('.currency-input-wrapper');
                
                if (isValid) {
                    field.classList.remove('is-invalid');
                    field.classList.add('is-valid');
                    errorSpan.classList.remove('show');
                    if (inputGroup) {
                        inputGroup.classList.remove('has-error');
                        inputGroup.classList.add('has-success');
                    }
                } else {
                    field.classList.remove('is-valid');
                    field.classList.add('is-invalid');
                    if (errorMessage && touchedFields.has(field.id)) {
                        errorSpan.textContent = errorMessage;
                        errorSpan.classList.add('show');
                    }
                    if (inputGroup) {
                        inputGroup.classList.remove('has-success');
                        inputGroup.classList.add('has-error');
                    }
                }
                
                // Announce to screen readers
                if (!isValid && errorMessage && touchedFields.has(field.id)) {
                    announce(errorMessage);
                }
                
                return isValid;
            }
            
            // === FORM SUBMISSION VALIDATION ===
            form.addEventListener('submit', function(e) {
                // Mark all fields as touched
                allInputs.forEach(input => {
                    touchedFields.add(input.id);
                    validateField(input);
                });
                
                // Check if form is valid
                const isFormValid = Array.from(allInputs).every(input => validateField(input));
                
                if (!isFormValid) {
                    e.preventDefault();
                    
                    // Find first invalid field
                    const firstInvalid = Array.from(allInputs).find(input => !input.checkValidity() || !validateField(input));
                    if (firstInvalid) {
                        firstInvalid.focus();
                        announce('Please fix the errors in the form before submitting');
                    }
                } else {
                    // Disable submit button to prevent double submission
                    submitButton.disabled = true;
                    submitButton.innerHTML = '<i class="bi bi-hourglass-split me-2" aria-hidden="true"></i>Creating...';
                    announce('Creating subscription...');
                }
            });
            
            // === CUSTOM NUMBER INPUT CONTROLS ===
            function incrementPrice() {
                if (!priceInput) return;
                const currentValue = parseFloat(priceInput.value) || 0;
                const step = parseFloat(priceInput.step) || 0.01;
                const max = parseFloat(priceInput.max) || 999999.99;
                const newValue = Math.min(currentValue + step, max);
                priceInput.value = newValue.toFixed(2);
                priceInput.dispatchEvent(new Event('input', { bubbles: true }));
                priceInput.focus();
                
                // Mark as touched and validate
                touchedFields.add(priceInput.id);
                validateField(priceInput);
            }
            
            function decrementPrice() {
                if (!priceInput) return;
                const currentValue = parseFloat(priceInput.value) || 0;
                const step = parseFloat(priceInput.step) || 0.01;
                const min = parseFloat(priceInput.min) || 0.01;
                const newValue = Math.max(currentValue - step, min);
                priceInput.value = newValue.toFixed(2);
                priceInput.dispatchEvent(new Event('input', { bubbles: true }));
                priceInput.focus();
                
                // Mark as touched and validate
                touchedFields.add(priceInput.id);
                validateField(priceInput);
            }
            
            // Attach number control listeners
            if (priceIncrementBtn) {
                priceIncrementBtn.addEventListener('click', incrementPrice);
            }
            if (priceDecrementBtn) {
                priceDecrementBtn.addEventListener('click', decrementPrice);
            }
            
            // Keyboard support for number controls
            if (priceInput) {
                priceInput.addEventListener('keydown', function(e) {
                    if (e.key === 'ArrowUp') {
                        e.preventDefault();
                        incrementPrice();
                    } else if (e.key === 'ArrowDown') {
                        e.preventDefault();
                        decrementPrice();
                    }
                });
            }
            
            // === ACCESSIBILITY ANNOUNCEMENTS ===
            function announce(message) {
                if (announcements) {
                    announcements.textContent = message;
                    // Clear after 3 seconds
                    setTimeout(() => {
                        announcements.textContent = '';
                    }, 3000);
                }
            }
            
            // === INITIALIZATION ANNOUNCEMENT ===
            setTimeout(() => {
                announce('Create subscription form loaded. Fill in all required fields marked with asterisk.');
            }, 500);
            
        })();
    </script>
}

