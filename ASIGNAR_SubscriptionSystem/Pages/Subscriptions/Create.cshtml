@page
@model ASIGNAR_SubscriptionSystem.Pages.Subscriptions.CreateModel

@{
    ViewData["Title"] = "Create New Subscription";
}

@section Styles {
    <link rel="stylesheet" href="~/css/add-subscription-responsive.css">
    <style>
        /* ============================================
           PREMIUM CREATE SUBSCRIPTION PAGE STYLES
           - Enterprise-grade dark theme
           - Consistent, accessible form controls
           - Custom dropdown and number input styling
           - Smooth animations and transitions
           - Full WCAG 2.1 AA compliance
           ============================================ */

        /* Force clean page background - override any global styles */
        body {
            background: #0a0a0f !important;
        }

        main {
            background: transparent !important;
        }

        /* Remove any potential pseudo-elements from body/main */
        body::before,
        body::after,
        main::before,
        main::after {
            display: none !important;
            content: none !important;
        }

        /* === SKIP LINK (Accessibility) === */
        .skip-link {
            position: absolute;
            top: -40px;
            left: 0;
            background: #6366f1;
            color: white;
            padding: 8px;
            text-decoration: none;
            z-index: 100;
        }

        .skip-link:focus {
            top: 0;
        }

        /* === CONTAINER & LAYOUT === */
        .add-subscription-container {
            min-height: 100vh;
            background: #0a0a0f;
            padding: 2rem 1rem;
            display: flex;
            align-items: center;
            position: relative;
            isolation: isolate;
        }

        /* Explicitly prevent any pseudo-elements or backgrounds */
        .add-subscription-container::before,
        .add-subscription-container::after,
        .add-subscription-container .container::before,
        .add-subscription-container .container::after {
            display: none !important;
            content: none !important;
        }

        /* Ensure Bootstrap container has no backgrounds */
        .add-subscription-container .container {
            background: transparent !important;
            position: relative;
        }

        /* === MAIN CARD === */
        .subscription-form-card {
            background: rgba(255, 255, 255, 0.02);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 
                0 8px 32px rgba(0, 0, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Subtle hover effect - no heavy glow */
        .subscription-form-card:hover {
            border-color: rgba(99, 102, 241, 0.2);
            box-shadow: 
                0 12px 40px rgba(0, 0, 0, 0.4),
                0 0 0 1px rgba(99, 102, 241, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
        }

        /* === HEADER === */
        .form-header {
            background: rgba(255, 255, 255, 0.02);
            padding: 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            text-align: center;
        }

        .icon-circle {
            width: 72px;
            height: 72px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.75rem;
            color: white;
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
        }

        .form-header h2 {
            font-size: 1.75rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
        }

        .form-header p {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9375rem;
        }

        /* === FORM BODY === */
        .form-body {
            padding: 2rem;
        }

        .form-group-modern {
            margin-bottom: 2rem; /* Increased from 1.5rem for better breathing room */
        }

        .form-label-modern {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            font-size: 0.8125rem;
            font-weight: 600;
            color: rgba(255, 255, 255, 0.85);
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .form-label-modern .required {
            color: #ef4444;
        }

        .form-label-modern .helper-icon {
            color: rgba(255, 255, 255, 0.3);
            font-size: 0.75rem;
            cursor: help;
            transition: color 0.2s;
        }

        .form-label-modern .helper-icon:hover {
            color: #6366f1;
        }

        /* === INPUT GROUP === */
        .input-group-modern {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.35);
            font-size: 1.125rem;
            pointer-events: none;
            z-index: 2;
            transition: color 0.2s;
        }

        /* === TEXT INPUTS === */
        .form-control-modern {
            width: 100%;
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 0.875rem 1rem 0.875rem 2.75rem;
            color: white;
            font-size: 0.9375rem;
            transition: all 0.2s ease;
            outline: none;
        }

        .form-control-modern::placeholder {
            color: rgba(255, 255, 255, 0.25);
        }

        /* Subtle hover - not jarring */
        .form-control-modern:hover:not(:focus):not(:disabled) {
            background: rgba(255, 255, 255, 0.06);
            border-color: rgba(255, 255, 255, 0.15);
        }

        /* Clear but subtle focus state */
        .form-control-modern:focus {
            background: rgba(255, 255, 255, 0.06);
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.12);
        }

        .form-control-modern:focus + .input-icon,
        .form-control-modern:focus ~ .input-icon {
            color: #6366f1;
        }

        /* === NUMBER INPUT (Amount) - Hide native spinner, add custom controls === */
        .currency-input-wrapper {
            position: relative;
        }

        .currency-symbol {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.5);
            font-weight: 600;
            font-size: 1rem;
            pointer-events: none;
            z-index: 2;
        }

        .currency-input {
            padding-left: 2.25rem !important;
            padding-right: 1rem !important;
        }

        /* Hide default number input spinner */
        .currency-input::-webkit-outer-spin-button,
        .currency-input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .currency-input[type=number] {
            -moz-appearance: textfield;
        }

        /* Custom number controls */
        .number-controls {
            position: absolute;
            right: 0.5rem;
            top: 50%;
            transform: translateY(-50%);
            display: flex;
            flex-direction: column;
            gap: 2px;
            z-index: 3;
        }

        .number-btn {
            width: 28px;
            height: 20px;
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 4px;
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.7rem;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.15s ease;
            user-select: none;
        }

        .number-btn:hover {
            background: rgba(99, 102, 241, 0.2);
            border-color: rgba(99, 102, 241, 0.3);
            color: #6366f1;
        }

        .number-btn:active {
            background: rgba(99, 102, 241, 0.3);
            transform: scale(0.95);
        }

        /* === ENHANCED SELECT DROPDOWNS === */
        .form-select-modern {
            width: 100%;
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 0.875rem 2.75rem 0.875rem 2.75rem;
            color: white;
            font-size: 0.9375rem;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            appearance: none;
            cursor: pointer;
            outline: none;
            /* Custom dropdown arrow */
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='rgba(255,255,255,0.4)' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 0.875rem center;
            background-size: 14px 14px;
        }

        /* Subtle hover */
        .form-select-modern:hover:not(:focus):not(:disabled) {
            background-color: rgba(255, 255, 255, 0.06);
            border-color: rgba(255, 255, 255, 0.15);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='rgba(255,255,255,0.6)' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        }

        /* Clear focus state */
        .form-select-modern:focus {
            background-color: rgba(255, 255, 255, 0.06);
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.12);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%236366f1' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        }

        .form-select-modern:focus + .input-icon,
        .input-group-modern:focus-within .input-icon {
            color: #6366f1;
        }

        /* Enhanced dropdown options - dark themed */
        .form-select-modern option {
            background: #16161f;
            color: white;
            padding: 0.75rem;
            font-size: 0.9375rem;
        }

        .form-select-modern option:hover {
            background: #1f1f2e;
        }

        .form-select-modern option:checked {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
        }

        /* Placeholder option styling */
        .form-select-modern option[value=""] {
            color: rgba(255, 255, 255, 0.4);
        }

        /* === DATE INPUT === */
        .form-control-modern[type="date"] {
            color-scheme: dark;
        }

        .form-control-modern[type="date"]::-webkit-calendar-picker-indicator {
            filter: invert(1);
            opacity: 0.5;
            cursor: pointer;
        }

        .form-control-modern[type="date"]::-webkit-calendar-picker-indicator:hover {
            opacity: 0.8;
        }

        /* === VALIDATION STATES - Progressive Only === */
        /* Only show validation states when explicitly triggered (after blur or submit) */
        .form-control-modern.is-valid:not(.pristine),
        .form-select-modern.is-valid:not(.pristine) {
            border-color: #10b981;
            background-color: rgba(16, 185, 129, 0.04);
        }

        .form-control-modern.is-invalid:not(.pristine),
        .form-select-modern.is-invalid:not(.pristine) {
            border-color: #ef4444;
            background-color: rgba(239, 68, 68, 0.04);
        }

        /* Success icon */
        .input-group-modern.has-success::after {
            content: "\f26b";
            font-family: "bootstrap-icons";
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #10b981;
            font-size: 1rem;
            pointer-events: none;
        }

        /* Error icon */
        .input-group-modern.has-error::after {
            content: "\f33a";
            font-family: "bootstrap-icons";
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #ef4444;
            font-size: 1rem;
            pointer-events: none;
        }

        /* === INPUT HINTS === */
        .input-hint {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.45);
            margin-top: 0.375rem;
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }

        .input-hint i {
            font-size: 0.8125rem;
            opacity: 0.7;
        }

        /* === IMPROVED FEEDBACK MESSAGES === */
        .text-danger {
            font-size: 0.8125rem;
            margin-top: 0.5rem;
            display: none; /* Hidden by default */
            color: #ef4444;
            background: rgba(239, 68, 68, 0.1);
            border-left: 3px solid #ef4444;
            padding: 0.5rem 0.75rem;
            border-radius: 6px;
            gap: 0.375rem;
        }

        .text-danger.show {
            display: flex;
            align-items: flex-start;
        }

        .text-danger::before {
            content: "\f33a";
            font-family: "bootstrap-icons";
            flex-shrink: 0;
            margin-top: 0.125rem;
        }

        .validation-summary-errors {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-left: 4px solid #ef4444;
            border-radius: 10px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            gap: 0.75rem;
        }

        .validation-summary-errors::before {
            content: "\f33a";
            font-family: "bootstrap-icons";
            color: #ef4444;
            font-size: 1.25rem;
            flex-shrink: 0;
        }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 1.25rem;
            color: #ef4444;
            flex: 1;
        }

        .validation-summary-errors li {
            margin-bottom: 0.25rem;
        }

        /* === SUBMIT BUTTON === */
        .btn-submit-modern {
            width: 100%;
            padding: 1rem 2rem;
            font-size: 1rem;
            font-weight: 600;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border: none;
            border-radius: 10px;
            color: white;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 1.5rem;
            box-shadow: 0 2px 8px rgba(99, 102, 241, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-submit-modern:hover:not(:disabled) {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

        .btn-submit-modern:active:not(:disabled) {
            transform: translateY(0);
        }

        .btn-submit-modern:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        /* === BACK LINK - Enhanced Visibility === */
        .back-link-modern {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            font-size: 0.9375rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            transition: all 0.2s ease;
        }

        .back-link-modern:hover {
            color: #6366f1;
            background: rgba(99, 102, 241, 0.1);
            border-color: rgba(99, 102, 241, 0.2);
            transform: translateX(-2px);
        }

        .back-link-modern:focus-visible {
            outline: 2px solid #6366f1;
            outline-offset: 2px;
        }

        /* === RESPONSIVE === */
        @@media (max-width: 768px) {
            .add-subscription-container {
                padding: 1rem 0.5rem;
            }

            .form-body {
                padding: 1.5rem 1rem;
            }

            .form-header {
                padding: 1.5rem 1rem;
            }

            .form-header h2 {
                font-size: 1.5rem;
            }

            .icon-circle {
                width: 64px;
                height: 64px;
                font-size: 1.5rem;
            }

            .form-group-modern {
                margin-bottom: 1.75rem;
            }

            .back-link-modern {
                font-size: 0.875rem;
                padding: 0.5rem;
            }
        }

        @@media (max-width: 576px) {
            .form-body {
                padding: 1.25rem 0.875rem;
            }

            .form-control-modern,
            .form-select-modern {
                font-size: 1rem; /* Prevent zoom on iOS */
            }
        }

        /* === ACCESSIBILITY === */
        /* Clear focus visible for keyboard navigation - WCAG 2.4.7 */
        .form-control-modern:focus-visible,
        .form-select-modern:focus-visible,
        .btn-submit-modern:focus-visible,
        .back-link-modern:focus-visible,
        .number-btn:focus-visible {
            outline: 3px solid #6366f1;
            outline-offset: 3px;
        }

        /* Screen reader only content */
        .visually-hidden {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }

        /* ARIA live region for announcements */
        .sr-announcements {
            position: absolute;
            left: -10000px;
            width: 1px;
            height: 1px;
            overflow: hidden;
        }

        /* High contrast mode support - WCAG 1.4.11 */
        @@media (prefers-contrast: high) {
            .form-control-modern,
            .form-select-modern {
                border-width: 2px;
            }

            .form-control-modern:focus,
            .form-select-modern:focus {
                border-width: 3px;
                outline-width: 4px;
            }

            .text-danger {
                border-left-width: 5px;
            }
        }

        /* Reduced motion support - WCAG 2.3.3 */
        @@media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }

        /* Improved color contrast - WCAG 1.4.3 (AA) */
        .input-hint {
            color: rgba(255, 255, 255, 0.65); /* Improved from 0.45 */
        }

        .form-label-modern {
            color: rgba(255, 255, 255, 0.95); /* Improved from 0.85 */
        }
    </style>
}

<a href="#main-form" class="skip-link">Skip to form</a>

<div class="add-subscription-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                
                <a asp-page="Index" class="back-link-modern" aria-label="Return to Subscriptions List">
                    <i class="bi bi-arrow-left" aria-hidden="true"></i>
                    <span>Back to List</span>
                </a>

                <div class="subscription-form-card">
                    <div class="form-header">
                        <div class="icon-circle" aria-hidden="true">
                            <i class="bi bi-plus-lg"></i>
                        </div>
                        <h2 class="fw-bold text-white mb-2">Create New Subscription</h2>
                        <p class="text-white-50 mb-0">Track and manage your recurring expenses</p>
                    </div>

                    <div class="form-body">
                        <!-- ARIA live region for screen reader announcements -->
                        <div class="sr-announcements" role="status" aria-live="polite" aria-atomic="true" id="form-announcements"></div>

                        <form method="post" id="subscription-form" aria-label="Create subscription form" novalidate>
                            <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>
                            
                            <!-- Service Name -->
                            <div class="form-group-modern">
                                <label asp-for="Subscription.ServiceName" class="form-label-modern">
                                    Service Name
                                    <span class="required" aria-label="required">*</span>
                                </label>
                                <div class="input-group-modern">
                                    <i class="bi bi-tag input-icon" aria-hidden="true"></i>
                                    <input asp-for="Subscription.ServiceName" 
                                           class="form-control-modern" 
                                           placeholder="e.g., Netflix, Spotify, Adobe..." 
                                           autofocus
                                           aria-required="true"
                                           aria-describedby="servicename-error"
                                           maxlength="100" />
                                </div>
                                <span asp-validation-for="Subscription.ServiceName" class="text-danger" id="servicename-error" role="alert"></span>
                            </div>

                            <div class="row g-3">
                                <!-- Amount with Custom Controls -->
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label asp-for="Subscription.Price" class="form-label-modern">
                                            Amount
                                            <span class="required" aria-label="required">*</span>
                                        </label>
                                        <div class="currency-input-wrapper">
                                            <span class="currency-symbol" aria-hidden="true">?</span>
                                            <input asp-for="Subscription.Price" 
                                                   class="form-control-modern currency-input" 
                                                   placeholder="" 
                                                   type="number" 
                                                   step="0.01" 
                                                   min="0.01" 
                                                   max="999999.99" 
                                                   aria-required="true"
                                                   aria-label="Amount in Philippine Peso"
                                                   aria-describedby="price-hint price-error" />
                                            <!-- Custom Number Controls -->
                                            <div class="number-controls">
                                                <button type="button" 
                                                        class="number-btn" 
                                                        id="price-increment"
                                                        aria-label="Increase amount"
                                                        tabindex="-1">
                                                    <i class="bi bi-chevron-up" aria-hidden="true"></i>
                                                </button>
                                                <button type="button" 
                                                        class="number-btn" 
                                                        id="price-decrement"
                                                        aria-label="Decrease amount"
                                                        tabindex="-1">
                                                    <i class="bi bi-chevron-down" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="input-hint" id="price-hint">
                                            <i class="bi bi-info-circle" aria-hidden="true"></i>
                                            <span>Enter amount in Philippine Peso (?). Minimum ?0.01</span>
                                        </div>
                                        <span asp-validation-for="Subscription.Price" class="text-danger" id="price-error" role="alert"></span>
                                    </div>
                                </div>

                                <!-- Billing Cycle -->
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label asp-for="Subscription.BillingCycle" class="form-label-modern">
                                            Billing Cycle
                                            <span class="required" aria-label="required">*</span>
                                        </label>
                                        <div class="input-group-modern">
                                            <i class="bi bi-arrow-repeat input-icon" aria-hidden="true"></i>
                                            <select asp-for="Subscription.BillingCycle" 
                                                    class="form-select-modern" 
                                                    aria-required="true"
                                                    aria-describedby="billingcycle-error">
                                                <option value="" disabled selected>Choose frequency...</option>
                                                <option value="Daily">Daily</option>
                                                <option value="Weekly">Weekly</option>
                                                <option value="Monthly">Monthly</option>
                                                <option value="Quarterly">Quarterly</option>
                                                <option value="Yearly">Yearly</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Subscription.BillingCycle" class="text-danger" id="billingcycle-error" role="alert"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3">
                                <!-- Category -->
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label asp-for="Subscription.Category" class="form-label-modern">
                                            Category
                                            <span class="required" aria-label="required">*</span>
                                        </label>
                                        <div class="input-group-modern">
                                            <i class="bi bi-grid input-icon" aria-hidden="true"></i>
                                            <select asp-for="Subscription.Category" 
                                                    class="form-select-modern" 
                                                    aria-required="true"
                                                    aria-describedby="category-error">
                                                <option value="" disabled selected>Select category...</option>
                                                <option value="Entertainment">Entertainment</option>
                                                <option value="Software">Software</option>
