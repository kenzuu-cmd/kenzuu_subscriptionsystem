@page
@model ASIGNAR_SubscriptionSystem.Pages.Subscriptions.EditModel

@{
    ViewData["Title"] = "Edit Subscription";
}

@section Styles {
    <link rel="stylesheet" href="~/css/add-subscription-responsive.css">
    <style>
        /* Edit page matches Create page design with orange accent color */
        body {
            background: #0a0a0f !important;
        }

        main {
            background: transparent !important;
        }

        .skip-link {
            position: absolute;
            top: -40px;
            left: 0;
            background: #f59e0b;
            color: white;
            padding: 8px;
            text-decoration: none;
            z-index: 100;
        }

        .skip-link:focus {
            top: 0;
        }

        .edit-subscription-container {
            min-height: 100vh;
            background: #0a0a0f;
            padding: 2rem 1rem;
            display: flex;
            align-items: center;
        }

        .subscription-form-card {
            background: rgba(255, 255, 255, 0.02);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        .form-header {
            background: rgba(255, 255, 255, 0.02);
            padding: 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            text-align: center;
        }

        .icon-circle {
            width: 72px;
            height: 72px;
            background: linear-gradient(135deg, #f59e0b, #f97316);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.75rem;
            color: white;
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.2);
        }

        .form-header h2 {
            font-size: 1.75rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
        }

        .form-body {
            padding: 2rem;
        }

        .form-group-modern {
            margin-bottom: 2rem;
        }

        .form-label-modern {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            font-size: 0.8125rem;
            font-weight: 600;
            color: rgba(255, 255, 255, 0.95);
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .form-label-modern .required {
            color: #ef4444;
        }

        .input-group-modern {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.35);
            font-size: 1.125rem;
            pointer-events: none;
            z-index: 2;
        }

        .form-control-modern {
            width: 100%;
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 0.875rem 1rem 0.875rem 2.75rem;
            color: white;
            font-size: 0.9375rem;
            transition: all 0.2s ease;
            outline: none;
        }

        .form-control-modern:focus {
            background: rgba(255, 255, 255, 0.06);
            border-color: #f59e0b;
            box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.12);
        }

        .form-control-modern:focus + .input-icon {
            color: #f59e0b;
        }

        .currency-input-wrapper {
            position: relative;
        }

        .currency-symbol {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.5);
            font-weight: 600;
            font-size: 1rem;
            pointer-events: none;
            z-index: 2;
        }

        .currency-input {
            padding-left: 2.25rem !important;
        }

        .currency-input::-webkit-outer-spin-button,
        .currency-input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .currency-input[type=number] {
            -moz-appearance: textfield;
        }

        .form-select-modern {
            width: 100%;
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 0.875rem 2.75rem 0.875rem 2.75rem;
            color: white;
            font-size: 0.9375rem;
            appearance: none;
            cursor: pointer;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='rgba(255,255,255,0.4)' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 0.875rem center;
            background-size: 14px 14px;
        }

        .form-select-modern:focus {
            border-color: #f59e0b;
            box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.12);
        }

        .form-select-modern:focus + .input-icon {
            color: #f59e0b;
        }

        .form-select-modern option {
            background: #16161f;
            color: white;
        }

        .form-control-modern[type="date"] {
            color-scheme: dark;
        }

        .text-danger {
            font-size: 0.8125rem;
            margin-top: 0.5rem;
            display: none;
            color: #ef4444;
            background: rgba(239, 68, 68, 0.1);
            border-left: 3px solid #ef4444;
            padding: 0.5rem 0.75rem;
            border-radius: 6px;
        }

        .text-danger.show {
            display: flex;
            align-items: flex-start;
            gap: 0.375rem;
        }

        .text-danger::before {
            content: "\f33a";
            font-family: "bootstrap-icons";
        }

        .input-hint {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.65);
            margin-top: 0.375rem;
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }

        .btn-submit-modern {
            width: 100%;
            padding: 1rem 2rem;
            font-size: 1rem;
            font-weight: 600;
            background: linear-gradient(135deg, #f59e0b, #f97316);
            border: none;
            border-radius: 10px;
            color: white;
            cursor: pointer;
            margin-top: 1.5rem;
            box-shadow: 0 2px 8px rgba(245, 158, 11, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-submit-modern:hover:not(:disabled) {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
        }

        .btn-submit-modern:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .back-link-modern {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            font-size: 0.9375rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            transition: all 0.2s ease;
        }

        .back-link-modern:hover {
            color: #f59e0b;
            background: rgba(245, 158, 11, 0.1);
            border-color: rgba(245, 158, 11, 0.2);
            transform: translateX(-2px);
        }

        .sr-announcements {
            position: absolute;
            left: -10000px;
            width: 1px;
            height: 1px;
            overflow: hidden;
        }

        @@media (max-width: 768px) {
            .edit-subscription-container {
                padding: 1rem 0.5rem;
            }

            .form-body {
                padding: 1.5rem 1rem;
            }

            .form-header {
                padding: 1.5rem 1rem;
            }
        }

        @@media (max-width: 576px) {
            .form-control-modern,
            .form-select-modern {
                font-size: 1rem;
            }
        }
    </style>
}

<a href="#main-form" class="skip-link">Skip to form</a>

<div class="edit-subscription-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                
                <a asp-page="Index" class="back-link-modern">
                    <i class="bi bi-arrow-left"></i>
                    <span>Back to List</span>
                </a>

                <div class="subscription-form-card">
                    <div class="form-header">
                        <div class="icon-circle">
                            <i class="bi bi-pencil"></i>
                        </div>
                        <h2>Edit Subscription</h2>
                        <p style="color: rgba(255,255,255,0.6); font-size: 0.9375rem;">Update your subscription details</p>
                    </div>

                    <div class="form-body">
                        <div class="sr-announcements" role="status" aria-live="polite" id="form-announcements"></div>

                        <form method="post" id="subscription-form" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Subscription.Id" />
                            
                            <div class="form-group-modern">
                                <label asp-for="Subscription.ServiceName" class="form-label-modern">
                                    Service Name
                                    <span class="required">*</span>
                                </label>
                                <div class="input-group-modern">
                                    <i class="bi bi-tag input-icon"></i>
                                    <input asp-for="Subscription.ServiceName" 
                                           class="form-control-modern" 
                                           autofocus
                                           aria-required="true"
                                           maxlength="100" />
                                </div>
                                <span asp-validation-for="Subscription.ServiceName" class="text-danger"></span>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label asp-for="Subscription.Price" class="form-label-modern">
                                            Amount
                                            <span class="required">*</span>
                                        </label>
                                        <div class="currency-input-wrapper">
                                            <span class="currency-symbol">?</span>
                                            <input asp-for="Subscription.Price" 
                                                   class="form-control-modern currency-input" 
                                                   type="number" 
                                                   step="0.01" 
                                                   min="0.01" />
                                        </div>
                                        <div class="input-hint">
                                            <i class="bi bi-info-circle"></i>
                                            <span>Enter amount in Philippine Peso</span>
                                        </div>
                                        <span asp-validation-for="Subscription.Price" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label asp-for="Subscription.BillingCycle" class="form-label-modern">
                                            Billing Cycle
                                            <span class="required">*</span>
                                        </label>
                                        <div class="input-group-modern">
                                            <i class="bi bi-arrow-repeat input-icon"></i>
                                            <select asp-for="Subscription.BillingCycle" class="form-select-modern">
                                                <option value="Daily">Daily</option>
                                                <option value="Weekly">Weekly</option>
                                                <option value="Monthly">Monthly</option>
                                                <option value="Quarterly">Quarterly</option>
                                                <option value="Yearly">Yearly</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Subscription.BillingCycle" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label asp-for="Subscription.Category" class="form-label-modern">
                                            Category
                                            <span class="required">*</span>
                                        </label>
                                        <div class="input-group-modern">
                                            <i class="bi bi-grid input-icon"></i>
                                            <select asp-for="Subscription.Category" class="form-select-modern">
                                                <option value="Entertainment">Entertainment</option>
                                                <option value="Software">Software</option>
                                                <option value="Music">Music</option>
                                                <option value="Cloud Storage">Cloud Storage</option>
                                                <option value="Productivity">Productivity</option>
                                                <option value="Fitness">Fitness</option>
                                                <option value="News">News</option>
                                                <option value="Gaming">Gaming</option>
                                                <option value="Education">Education</option>
                                                <option value="Other">Other</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Subscription.Category" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label asp-for="Subscription.NextPaymentDate" class="form-label-modern">
                                            Next Payment
                                            <span class="required">*</span>
                                        </label>
                                        <div class="input-group-modern">
                                            <i class="bi bi-calendar-event input-icon"></i>
                                            <input asp-for="Subscription.NextPaymentDate" 
                                                   type="date" 
                                                   class="form-control-modern" />
                                        </div>
                                        <span asp-validation-for="Subscription.NextPaymentDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn-submit-modern" id="submit-button">
                                <i class="bi bi-check-circle"></i>
                                Save Changes
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function() {
            'use strict';
            const form = document.getElementById('subscription-form');
            const submitButton = document.getElementById('submit-button');
            
            form.addEventListener('submit', function() {
                submitButton.disabled = true;
                submitButton.innerHTML = '<i class="bi bi-hourglass-split"></i>Saving...';
            });
        })();
    </script>
}

