@page
@model ASIGNAR_SubscriptionSystem.Pages.Subscriptions.DetailsModel

@{
    ViewData["Title"] = "Subscription Details";
}

@section Styles {
    <style>
        /* ============================================
           PREMIUM DETAILS PAGE STYLES
           - High contrast, scannable information
           - Icon-enhanced fields
           - Responsive two-column layout
           - Clear action button hierarchy
           ============================================ */

        body {
            background: #0a0a0f !important;
        }

        main {
            background: transparent !important;
        }

        /* === SKIP LINK === */
        .skip-link {
            position: absolute;
            top: -40px;
            left: 0;
            background: #6366f1;
            color: white;
            padding: 8px;
            text-decoration: none;
            z-index: 100;
        }

        .skip-link:focus {
            top: 0;
        }

        /* === CONTAINER === */
        .details-container {
            min-height: 100vh;
            background: #0a0a0f;
            padding: 2rem 1rem;
        }

        /* === BACK LINK === */
        .back-link-modern {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            font-size: 0.9375rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            transition: all 0.2s ease;
        }

        .back-link-modern:hover {
            color: #6366f1;
            background: rgba(99, 102, 241, 0.1);
            border-color: rgba(99, 102, 241, 0.2);
            transform: translateX(-2px);
        }

        /* === PAGE HEADER === */
        .page-header-details {
            margin-bottom: 2rem;
        }

        .page-header-details h1 {
            font-size: 2rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .page-header-details h1 .icon-circle {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            flex-shrink: 0;
        }

        .page-subtitle {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9375rem;
            margin-left: 3.5rem;
        }

        /* === DETAILS CARD === */
        .details-card {
            background: rgba(255, 255, 255, 0.02);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 
                0 8px 32px rgba(0, 0, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
            overflow: hidden;
            margin-bottom: 1.5rem;
        }

        .details-card-header {
            background: rgba(255, 255, 255, 0.02);
            padding: 1.5rem 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .service-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            margin: 0;
        }

        .details-card-body {
            padding: 2rem;
        }

        /* === INFO GRID === */
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .info-item {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            padding: 1.25rem;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 12px;
            transition: all 0.2s ease;
        }

        .info-item:hover {
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(99, 102, 241, 0.2);
            transform: translateY(-2px);
        }

        .info-icon {
            width: 40px;
            height: 40px;
            background: rgba(99, 102, 241, 0.1);
            border: 1px solid rgba(99, 102, 241, 0.3);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.125rem;
            color: #818cf8;
            flex-shrink: 0;
        }

        .info-content {
            flex: 1;
        }

        .info-label {
            font-size: 0.75rem;
            font-weight: 600;
            color: rgba(255, 255, 255, 0.5);
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.375rem;
        }

        .info-value {
            font-size: 1.125rem;
            font-weight: 600;
            color: rgba(255, 255, 255, 0.95);
        }

        .info-value.price {
            font-size: 1.375rem;
            color: #10b981;
        }

        /* === ACTION BUTTONS === */
        .action-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            padding: 1.5rem 2rem;
            background: rgba(255, 255, 255, 0.01);
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }

        .btn-action {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.875rem 1.5rem;
            font-size: 0.9375rem;
            font-weight: 600;
            border-radius: 10px;
            text-decoration: none;
            transition: all 0.2s ease;
            border: none;
            cursor: pointer;
        }

        .btn-primary-action {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
            box-shadow: 0 2px 8px rgba(99, 102, 241, 0.2);
        }

        .btn-primary-action:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

        .btn-danger-action {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
        }

        .btn-danger-action:hover {
            background: rgba(239, 68, 68, 0.2);
            border-color: rgba(239, 68, 68, 0.5);
            transform: translateY(-1px);
        }

        .btn-secondary-action {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.7);
        }

        .btn-secondary-action:hover {
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 255, 255, 0.2);
            color: white;
        }

        /* === RESPONSIVE === */
        @@media (max-width: 768px) {
            .details-container {
                padding: 1rem 0.5rem;
            }

            .page-header-details h1 {
                font-size: 1.5rem;
            }

            .page-header-details h1 .icon-circle {
                width: 40px;
                height: 40px;
                font-size: 1rem;
            }

            .page-subtitle {
                margin-left: 3rem;
                font-size: 0.875rem;
            }

            .details-card-header,
            .details-card-body,
            .action-buttons {
                padding: 1.25rem;
            }

            .service-title {
                font-size: 1.25rem;
            }

            .info-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .info-item {
                padding: 1rem;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn-action {
                width: 100%;
                justify-content: center;
            }
        }

        /* === ACCESSIBILITY === */
        .btn-action:focus-visible,
        .back-link-modern:focus-visible,
        .info-item:focus-visible {
            outline: 3px solid #6366f1;
            outline-offset: 3px;
        }

        @@media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                transition-duration: 0.01ms !important;
            }
        }
    </style>
}

<a href="#main-content" class="skip-link">Skip to content</a>

<div class="details-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                
                <a asp-page="Index" class="back-link-modern" aria-label="Return to Subscriptions List">
                    <i class="bi bi-arrow-left" aria-hidden="true"></i>
                    <span>Back to List</span>
                </a>

                <div class="page-header-details">
                    <h1 id="main-content">
                        <span class="icon-circle" aria-hidden="true">
                            <i class="bi bi-eye"></i>
                        </span>
                        Subscription Details
                    </h1>
                    <p class="page-subtitle">View complete information about this subscription</p>
                </div>

                <div class="details-card">
                    <div class="details-card-header">
                        <h2 class="service-title">@Model.Subscription?.ServiceName</h2>
                    </div>

                    <div class="details-card-body">
                        <div class="info-grid">
                            <!-- Amount -->
                            <div class="info-item">
                                <div class="info-icon" aria-hidden="true">
                                    <i class="bi bi-currency-dollar"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">@Html.DisplayNameFor(model => model.Subscription.Price)</div>
                                    <div class="info-value price">?@Model.Subscription?.Price.ToString("N2")</div>
                                </div>
                            </div>

                            <!-- Billing Cycle -->
                            <div class="info-item">
                                <div class="info-icon" aria-hidden="true">
                                    <i class="bi bi-arrow-repeat"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">@Html.DisplayNameFor(model => model.Subscription.BillingCycle)</div>
                                    <div class="info-value">@Model.Subscription?.BillingCycle</div>
                                </div>
                            </div>

                            <!-- Category -->
                            <div class="info-item">
                                <div class="info-icon" aria-hidden="true">
                                    <i class="bi bi-grid"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">@Html.DisplayNameFor(model => model.Subscription.Category)</div>
                                    <div class="info-value">@Model.Subscription?.Category</div>
                                </div>
                            </div>

                            <!-- Next Payment Date -->
                            <div class="info-item">
                                <div class="info-icon" aria-hidden="true">
                                    <i class="bi bi-calendar-event"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">@Html.DisplayNameFor(model => model.Subscription.NextPaymentDate)</div>
                                    <div class="info-value">@Model.Subscription?.NextPaymentDate.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a asp-page="./Edit" asp-route-id="@Model.Subscription?.Id" 
                           class="btn-action btn-primary-action"
                           aria-label="Edit this subscription">
                            <i class="bi bi-pencil" aria-hidden="true"></i>
                            <span>Edit Subscription</span>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@Model.Subscription?.Id" 
                           class="btn-action btn-danger-action"
                           aria-label="Delete this subscription">
                            <i class="bi bi-trash" aria-hidden="true"></i>
                            <span>Delete Subscription</span>
                        </a>
                        <a asp-page="./Index" 
                           class="btn-action btn-secondary-action"
                           aria-label="Return to subscriptions list">
                            <i class="bi bi-list" aria-hidden="true"></i>
                            <span>View All Subscriptions</span>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
