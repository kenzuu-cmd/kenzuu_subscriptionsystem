@page
@model ASIGNAR_SubscriptionSystem.Pages.DeveloperOptionsModel
@{
    ViewData["Title"] = "Developer Options";
}

<style>
    body {
        background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
        min-height: 100vh;
    }
    
    .dev-options-card {
        background: #1a1a2e;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        overflow: hidden;
    }
    
    .dev-options-header {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        padding: 2rem 2.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .dev-options-header h2 {
        color: #ffffff;
        font-weight: 700;
        font-size: 1.875rem;
        margin-bottom: 0.5rem;
    }
    
    .dev-options-header p {
        color: rgba(255, 255, 255, 0.85);
        margin: 0;
        font-size: 0.9375rem;
    }
    
    .dev-options-body {
        padding: 2.5rem;
    }
    
    .alert-info {
        background: rgba(99, 102, 241, 0.1);
        border: 1px solid rgba(99, 102, 241, 0.3);
        color: #a5b4fc;
        border-radius: 12px;
        padding: 1.25rem 1.5rem;
        display: flex;
        align-items: start;
        gap: 1rem;
    }
    
    .alert-info h5 {
        color: #ffffff;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .alert-info p {
        margin: 0;
        color: #d1d5db;
    }
    
    .section-divider {
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        margin: 2.5rem -2.5rem;
        padding-top: 1rem;
        padding-bottom: 1rem;
    }
    
    .section-heading {
        color: #ffffff;
        font-weight: 700;
        font-size: 1.125rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .section-heading i {
        font-size: 1.25rem;
    }
    
    .section-content {
        padding: 0 1rem;
    }
    
    .info-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }
    
    .info-row:last-child {
        border-bottom: none;
    }
    
    .info-label {
        color: #9ca3af;
        font-weight: 600;
        font-size: 0.9375rem;
    }
    
    .info-value {
        color: #e5e7eb;
        font-weight: 500;
    }
    
    .badge {
        padding: 0.375rem 0.75rem;
        font-weight: 600;
        border-radius: 6px;
        font-size: 0.8125rem;
    }
    
    .badge.bg-success {
        background: #10b981;
        color: #ffffff;
    }
    
    .form-check {
        padding: 0.875rem 0;
        display: flex;
        align-items: center;
    }
    
    .form-check-input {
        width: 2.5rem;
        height: 1.25rem;
        background-color: #374151;
        border: 2px solid #4b5563;
        cursor: pointer;
        margin-right: 0;
    }
    
    .form-check-input:checked {
        background-color: #6366f1;
        border-color: #6366f1;
    }
    
    .form-check-input:disabled {
        background-color: #1f2937;
        border-color: #374151;
        cursor: not-allowed;
        opacity: 0.5;
    }
    
    .form-check-label {
        color: #e5e7eb;
        font-weight: 500;
        margin-left: 1rem;
        font-size: 0.9375rem;
    }
    
    .action-btn {
        border: 2px solid #374151;
        color: #e5e7eb;
        background: rgba(55, 65, 81, 0.3);
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.3s ease;
        padding: 0.75rem 1.25rem;
        width: 100%;
        text-align: left;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
    }
    
    .action-btn:last-child {
        margin-bottom: 0;
    }
    
    .action-btn:hover:not(:disabled) {
        background: rgba(99, 102, 241, 0.15);
        border-color: #6366f1;
        color: #a5b4fc;
    }
    
    .action-btn:disabled {
        border-color: #1f2937;
        color: #6b7280;
        cursor: not-allowed;
        opacity: 0.6;
    }
    
    .action-btn.danger {
        border-color: #7f1d1d;
        color: #fca5a5;
    }
    
    .action-btn.danger:hover:not(:disabled) {
        background: rgba(239, 68, 68, 0.15);
        border-color: #dc2626;
    }
    
    .alert-warning {
        background: rgba(245, 158, 11, 0.1);
        border: 1px solid rgba(245, 158, 11, 0.3);
        color: #fbbf24;
        border-radius: 12px;
        padding: 1.25rem 1.5rem;
        display: flex;
        align-items: start;
        gap: 1rem;
    }
    
    .alert-warning strong {
        color: #fcd34d;
    }
    
    .form-control {
        background: #0f1419;
        border: 2px solid #374151;
        color: #ffffff;
        border-radius: 10px;
        padding: 0.75rem 1.25rem;
        font-size: 0.9375rem;
    }
    
    .form-control:disabled {
        background: #1f2937;
        border-color: #374151;
        color: #9ca3af;
        cursor: not-allowed;
    }
    
    .form-control:focus {
        background: #111827;
        border-color: #6366f1;
        color: #ffffff;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        outline: none;
    }
    
    .form-label {
        color: #e5e7eb;
        font-weight: 600;
        margin-bottom: 0.625rem;
        font-size: 0.875rem;
        display: block;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border: none;
        color: #ffffff;
        font-weight: 700;
        border-radius: 10px;
        padding: 0.875rem 2.5rem;
        box-shadow: 0 4px 16px rgba(99, 102, 241, 0.4);
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover:not(:disabled) {
        background: linear-gradient(135deg, #4f46e5, #7c3aed);
        box-shadow: 0 6px 20px rgba(99, 102, 241, 0.5);
        transform: translateY(-1px);
    }
    
    .btn-primary:disabled {
        background: #374151;
        color: #9ca3af;
        box-shadow: none;
        cursor: not-allowed;
    }
    
    .btn-outline-secondary {
        border: 2px solid #374151;
        color: #e5e7eb;
        background: transparent;
        font-weight: 600;
        border-radius: 10px;
        padding: 0.875rem 2.5rem;
        transition: all 0.3s ease;
    }
    
    .btn-outline-secondary:hover {
        background: rgba(55, 65, 81, 0.3);
        border-color: #4b5563;
        color: #ffffff;
    }
    
    .border-top {
        border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
        margin-top: 1.5rem !important;
        padding-top: 1.5rem !important;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="dev-options-card">
                <div class="dev-options-header">
                    <h2 class="d-flex align-items-center gap-2">
                        <i class="bi bi-code-slash"></i>
                        Developer Options
                    </h2>
                    <p>Advanced settings and system configuration</p>
                </div>
                <div class="dev-options-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle-fill" style="font-size: 1.5rem; color: #818cf8;"></i>
                        <div style="flex: 1;">
                            <h5>Admin-Only Access</h5>
                            <p>This page is only accessible to administrators. Configure system-wide settings, debug options, and advanced features here.</p>
                        </div>
                    </div>

                    <!-- System Information -->
                    <div class="mb-5">
                        <h5 class="section-heading">
                            <i class="bi bi-cpu" style="color: #6366f1;"></i>
                            System Information
                        </h5>
                        <div class="section-content">
                            <div class="info-row">
                                <span class="info-label">Application</span>
                                <span class="info-value">SubWise Subscription Manager</span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Version</span>
                                <span class="info-value">1.0.0</span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Framework</span>
                                <span class="info-value">ASP.NET Core 9.0</span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Database</span>
                                <span class="info-value">SQL Server LocalDB</span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Environment</span>
                                <span class="badge bg-success">Development</span>
                            </div>
                        </div>
                    </div>

                    <div class="section-divider"></div>

                    <!-- Debug Options -->
                    <div class="mb-5">
                        <h5 class="section-heading">
                            <i class="bi bi-bug" style="color: #ef4444;"></i>
                            Debug Options
                        </h5>
                        <div class="section-content">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="debugMode" disabled>
                                <label class="form-check-label" for="debugMode">Enable Debug Mode</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="verboseLogging" disabled>
                                <label class="form-check-label" for="verboseLogging">Verbose Logging</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="performanceMetrics" disabled>
                                <label class="form-check-label" for="performanceMetrics">Performance Metrics</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="errorTracing" disabled>
                                <label class="form-check-label" for="errorTracing">Error Tracing</label>
                            </div>
                        </div>
                    </div>

                    <div class="section-divider"></div>

                    <div class="row">
                        <!-- API Configuration -->
                        <div class="col-md-6 mb-5">
                            <h5 class="section-heading">
                                <i class="bi bi-gear-wide-connected" style="color: #06b6d4;"></i>
                                API Configuration
                            </h5>
                            <div class="section-content">
                                <button class="action-btn" disabled>
                                    <i class="bi bi-key"></i>
                                    <span>Manage API Keys</span>
                                </button>
                                <button class="action-btn" disabled>
                                    <i class="bi bi-shield-check"></i>
                                    <span>Configure CORS</span>
                                </button>
                                <button class="action-btn" disabled>
                                    <i class="bi bi-clock-history"></i>
                                    <span>Rate Limiting</span>
                                </button>
                                <button class="action-btn" disabled>
                                    <i class="bi bi-webhook"></i>
                                    <span>Webhook Settings</span>
                                </button>
                            </div>
                        </div>

                        <!-- Database Management -->
                        <div class="col-md-6 mb-5">
                            <h5 class="section-heading">
                                <i class="bi bi-database" style="color: #f59e0b;"></i>
                                Database Management
                            </h5>
                            <div class="section-content">
                                <button class="action-btn" disabled>
                                    <i class="bi bi-arrow-clockwise"></i>
                                    <span>Run Migrations</span>
                                </button>
                                <button class="action-btn" disabled>
                                    <i class="bi bi-file-earmark-arrow-down"></i>
                                    <span>Backup Database</span>
                                </button>
                                <button class="action-btn" disabled>
                                    <i class="bi bi-file-earmark-arrow-up"></i>
                                    <span>Restore Database</span>
                                </button>
                                <button class="action-btn danger" disabled>
                                    <i class="bi bi-trash"></i>
                                    <span>Clear Cache</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="section-divider"></div>

                    <!-- Security Settings -->
                    <div class="mb-5">
                        <h5 class="section-heading">
                            <i class="bi bi-shield-lock" style="color: #10b981;"></i>
                            Security Settings
                        </h5>
                        <div class="section-content">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Session Timeout (minutes)</label>
                                    <input type="number" class="form-control" value="30" disabled>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Max Login Attempts</label>
                                    <input type="number" class="form-control" value="5" disabled>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Password Expiry (days)</label>
                                    <input type="number" class="form-control" value="90" disabled>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning mt-5 mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.25rem; color: #f59e0b;"></i>
                        <div>
                            <strong>Placeholder Notice:</strong> This page is currently a UI placeholder. Functionality will be implemented in future updates.
                        </div>
                    </div>

                    <div class="d-flex justify-content-between border-top">
                        <a asp-page="/Home" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Home
                        </a>
                        <button class="btn btn-primary" disabled>
                            <i class="bi bi-save me-2"></i>Save Settings
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
