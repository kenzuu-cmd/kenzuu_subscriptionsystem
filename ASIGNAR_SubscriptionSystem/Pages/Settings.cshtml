@page
@model ASIGNAR_SubscriptionSystem.Pages.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

@section Styles {
    <link rel="stylesheet" href="~/css/settings-responsive.css">
    <style>
        /* Modern Settings Page Styles */
        .settings-container {
            min-height: 100vh;
            padding: 3rem 0;
        }
        
        .settings-header {
            margin-bottom: 3rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .profile-avatar {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            font-weight: 700;
            color: white;
            box-shadow: 0 8px 32px rgba(99, 102, 241, 0.4);
            margin-right: 2rem;
        }
        
        .settings-section {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
        }
        
        .settings-section:hover {
            border-color: rgba(99, 102, 241, 0.3);
            box-shadow: 0 12px 40px rgba(99, 102, 241, 0.1);
        }
        
        .section-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .section-title i {
            color: #6366f1;
            font-size: 1.5rem;
        }
        
        .section-subtitle {
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.875rem;
            margin-bottom: 2rem;
        }
        
        .form-group-settings {
            margin-bottom: 1.5rem;
        }
        
        .form-label-settings {
            display: block;
            font-size: 0.875rem;
            font-weight: 600;
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 0.5rem;
        }
        
        .form-control-settings {
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 0.875rem 1rem;
            color: white;
            font-size: 1rem;
            transition: all 0.3s ease;
            width: 100%;
        }
        
        .form-control-settings:focus {
            outline: none;
            background: rgba(255, 255, 255, 0.08);
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.15);
        }
        
        .form-control-settings[readonly] {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .form-select-settings {
            background: rgba(255, 255, 255, 0.05) url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='rgba(255,255,255,0.4)' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e") right 0.75rem center/12px 12px no-repeat;
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 0.875rem 2.5rem 0.875rem 1rem;
            color: white;
            font-size: 1rem;
            transition: all 0.3s ease;
            appearance: none;
            cursor: pointer;
        }
        
        .form-select-settings:focus {
            outline: none;
            background-color: rgba(255, 255, 255, 0.08);
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.15);
        }
        
        .form-select-settings option {
            background: #1a1a2e;
            color: white;
        }
        
        .helper-text {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.5);
            margin-top: 0.375rem;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }
        
        .helper-text i {
            font-size: 0.875rem;
        }
        
        .preference-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.25rem;
            background: rgba(255, 255, 255, 0.02);
            border-radius: 12px;
            margin-bottom: 1rem;
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
        }
        
        .preference-item:hover {
            background: rgba(255, 255, 255, 0.04);
            border-color: rgba(255, 255, 255, 0.1);
        }
        
        .preference-content h6 {
            font-size: 1rem;
            font-weight: 600;
            color: white;
            margin-bottom: 0.25rem;
        }
        
        .preference-content p {
            font-size: 0.875rem;
            color: rgba(255, 255, 255, 0.5);
            margin: 0;
        }
        
        /* Modern Toggle Switch */
        .toggle-switch {
            position: relative;
            width: 56px;
            height: 28px;
        }
        
        .toggle-switch input[type="checkbox"] {
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            border-radius: 28px;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }
        
        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 20px;
            width: 20px;
            left: 2px;
            bottom: 2px;
            background: white;
            transition: all 0.3s ease;
            border-radius: 50%;
        }
        
        input[type="checkbox"]:checked + .toggle-slider {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border-color: #6366f1;
        }
        
        input[type="checkbox"]:checked + .toggle-slider:before {
            transform: translateX(28px);
        }
        
        input[type="checkbox"]:focus + .toggle-slider {
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.15);
        }
        
        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
        }
        
        .btn-settings-primary {
            padding: 0.875rem 2.5rem;
            font-size: 1rem;
            font-weight: 600;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border: none;
            border-radius: 12px;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 24px rgba(99, 102, 241, 0.4);
        }
        
        .btn-settings-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(99, 102, 241, 0.5);
        }
        
        .btn-settings-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .btn-settings-secondary {
            padding: 0.875rem 2rem;
            font-size: 1rem;
            font-weight: 600;
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .btn-settings-secondary:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
        }
        
        @@media (max-width: 768px) {
            .settings-header {
                flex-direction: column;
                text-align: center;
            }
            
            .profile-avatar {
                margin: 0 auto 1.5rem;
            }
            
            .action-buttons {
                flex-direction: column;
            }
            
            .btn-settings-primary,
            .btn-settings-secondary {
                width: 100%;
            }
        }
    </style>
}

<div class="settings-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">

                <!-- Header -->
                <div class="settings-header d-flex align-items-center">
                    <div class="profile-avatar">
                        @(Model.Username?.Substring(0, 1).ToUpper() ?? "U")
                    </div>
                    <div>
                        <h1 class="fw-bold text-white mb-2">Account Settings</h1>
                        <p class="text-white-50 mb-0">Manage your profile and preferences</p>
                    </div>
                </div>

                @if (TempData["StatusMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert" style="background: rgba(16, 185, 129, 0.1); border-color: rgba(16, 185, 129, 0.3); color: #86efac;">
                        <i class="bi bi-check-circle me-2"></i>@TempData["StatusMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post" id="settings-form">

                    <!-- General Information -->
                    <div class="settings-section">
                        <div class="section-title">
                            <i class="bi bi-person-circle"></i>
                            <span>Profile Information</span>
                        </div>
                        <p class="section-subtitle">Your account details from LocalDB</p>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-settings">
                                    <label class="form-label-settings">
                                        <i class="bi bi-person me-1"></i> Username
                                    </label>
                                    <input asp-for="Username" class="form-control-settings" readonly />
                                    <div class="helper-text">
                                        <i class="bi bi-lock"></i>
                                        <span>Username cannot be changed</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-settings">
                                    <label class="form-label-settings">
                                        <i class="bi bi-envelope me-1"></i> Email Address
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control-settings" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                    @if (Model.EmailConfirmed)
                                    {
                                        <div class="helper-text text-success">
                                            <i class="bi bi-check-circle-fill"></i>
                                            <span>Email verified</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="helper-text text-warning">
                                            <i class="bi bi-exclamation-circle-fill"></i>
                                            <span>Email not verified</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- App Preferences -->
                    <div class="settings-section">
                        <div class="section-title">
                            <i class="bi bi-bell"></i>
                            <span>Notifications</span>
                        </div>
                        <p class="section-subtitle">Manage how you receive updates</p>

                        <div class="preference-item">
                            <div class="preference-content">
                                <h6>
                                    <i class="bi bi-bell me-2"></i>Email Notifications
                                </h6>
                                <p>Receive email alerts for upcoming subscription payments</p>
                            </div>
                            <label class="toggle-switch">
                                <input type="checkbox" asp-for="EmailNotifications" />
                                <span class="toggle-slider"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <a href="/Dashboard" class="btn-settings-secondary">
                            <i class="bi bi-x-lg me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn-settings-primary">
                            <i class="bi bi-check-lg me-2"></i>Save Changes
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
