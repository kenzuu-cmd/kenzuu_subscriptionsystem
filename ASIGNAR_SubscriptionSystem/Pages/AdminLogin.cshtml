@page
@model ASIGNAR_SubscriptionSystem.Pages.AdminLoginModel
@{
    ViewData["Title"] = "Admin Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SubWise</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 2rem 1rem;
        }
        
        .admin-login-container {
            background: #1a1a2e;
            border-radius: 24px;
            padding: 3rem 2.5rem;
            box-shadow: 0 24px 72px rgba(0, 0, 0, 0.5), 0 8px 24px rgba(0, 0, 0, 0.3);
            max-width: 480px;
            width: 100%;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .admin-logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 32px rgba(99, 102, 241, 0.4);
        }
        
        .admin-logo i {
            font-size: 2.5rem;
            color: #ffffff;
        }
        
        .admin-login-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }
        
        .admin-login-header h1 {
            color: #ffffff;
            font-weight: 700;
            font-size: 1.875rem;
            margin-bottom: 0.625rem;
            letter-spacing: -0.025em;
        }
        
        .admin-login-header p {
            color: #9ca3af;
            font-size: 0.9375rem;
            margin: 0;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            font-weight: 600;
            color: #e5e7eb;
            margin-bottom: 0.625rem;
            font-size: 0.9375rem;
            display: block;
            text-align: left;
        }
        
        .form-control {
            border: 2px solid #374151;
            border-radius: 12px;
            padding: 1rem 1.125rem;
            font-size: 1rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            width: 100%;
            background: #0f1419;
            color: #ffffff;
        }
        
        .form-control::placeholder {
            color: #6b7280;
        }
        
        .form-control:hover {
            border-color: #4b5563;
            background: #111827;
        }
        
        .form-control:focus {
            border-color: #6366f1;
            background: #111827;
            box-shadow: 0 0 0 5px rgba(99, 102, 241, 0.15);
            outline: none;
            color: #ffffff;
        }
        
        .field-validation-error {
            display: block;
            color: #f87171;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            font-weight: 500;
            text-align: left;
        }
        
        .general-error-message {
            background: rgba(239, 68, 68, 0.1);
            border: 2px solid rgba(239, 68, 68, 0.3);
            border-radius: 12px;
            padding: 1rem 1.125rem;
            color: #fca5a5;
            margin-bottom: 1.75rem;
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            font-weight: 500;
        }
        
        .general-error-message i {
            font-size: 1.25rem;
            flex-shrink: 0;
            margin-top: 0.125rem;
            color: #f87171;
        }
        
        .btn-admin-login {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border: none;
            border-radius: 12px;
            padding: 1.125rem 2rem;
            font-weight: 700;
            font-size: 1.0625rem;
            width: 100%;
            color: #ffffff;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 6px 24px rgba(99, 102, 241, 0.4);
            cursor: pointer;
            margin-top: 0.5rem;
        }
        
        .btn-admin-login:not(:disabled):hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 32px rgba(99, 102, 241, 0.5);
            background: linear-gradient(135deg, #4f46e5, #7c3aed);
        }
        
        .btn-admin-login:not(:disabled):active {
            transform: translateY(0);
            box-shadow: 0 4px 16px rgba(99, 102, 241, 0.4);
        }
        
        .btn-admin-login:disabled {
            background: #374151;
            box-shadow: none;
            cursor: not-allowed;
            color: #9ca3af;
        }
        
        .btn-admin-login .spinner-border {
            width: 1.25rem;
            height: 1.25rem;
            border-width: 2px;
            margin-right: 0.625rem;
            display: none;
        }
        
        .btn-admin-login.loading .spinner-border {
            display: inline-block;
        }
        
        .btn-admin-login.loading .btn-text {
            display: none;
        }
        
        .back-home {
            text-align: center;
            margin-top: 2rem;
        }
        
        .back-home a {
            color: #818cf8;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9375rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
        }
        
        .back-home a:hover {
            color: #a5b4fc;
            background: rgba(129, 140, 248, 0.1);
        }
        
        .back-home a i {
            transition: transform 0.3s ease;
        }
        
        .back-home a:hover i {
            transform: translateX(-4px);
        }
        
        @@media (max-width: 576px) {
            .admin-login-container {
                padding: 2.5rem 1.75rem;
            }
            
            .admin-login-header h1 {
                font-size: 1.625rem;
            }
            
            .form-control {
                padding: 0.9375rem 1rem;
                font-size: 0.9375rem;
            }
            
            .btn-admin-login {
                padding: 1rem 1.5rem;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="admin-login-container">
        <div class="admin-login-header">
            <div class="admin-logo">
                <i class="bi bi-shield-lock-fill"></i>
            </div>
            <h1>Admin Login</h1>
            <p>Enter your credentials to access the admin panel</p>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="general-error-message" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <span>@Model.ErrorMessage</span>
            </div>
        }
        
        <form method="post" id="adminLoginForm">
            <div class="form-group">
                <label asp-for="AdminUser.Username" class="form-label">Username</label>
                <input asp-for="AdminUser.Username" 
                       class="form-control" 
                       autocomplete="username"
                       aria-label="Enter your admin username"
                       aria-required="true"
                       aria-describedby="username-error"
                       id="username-input" />
                <span asp-validation-for="AdminUser.Username" class="field-validation-error" id="username-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="AdminUser.Password" class="form-label">Password</label>
                <input asp-for="AdminUser.Password" 
                       class="form-control" 
                       autocomplete="current-password"
                       aria-label="Enter your admin password"
                       aria-required="true"
                       aria-describedby="password-error"
                       id="password-input" />
                <span asp-validation-for="AdminUser.Password" class="field-validation-error" id="password-error"></span>
            </div>
            
            <button type="submit" class="btn btn-admin-login" id="loginButton" disabled aria-label="Login to admin panel">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                <span class="btn-text">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    Login to Admin Panel
                </span>
                <span class="loading-text" style="display: none;">Authenticating...</span>
            </button>
        </form>
        
        <div class="back-home">
            <a asp-page="/Home" aria-label="Go back to home page">
                <i class="bi bi-arrow-left"></i>
                <span>Back to Home</span>
            </a>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('adminLoginForm');
            const usernameInput = document.getElementById('username-input');
            const passwordInput = document.getElementById('password-input');
            const loginButton = document.getElementById('loginButton');
            
            function checkFormValidity() {
                const username = usernameInput.value.trim();
                const password = passwordInput.value.trim();
                loginButton.disabled = !username || !password;
            }
            
            usernameInput.addEventListener('input', checkFormValidity);
            passwordInput.addEventListener('input', checkFormValidity);
            
            form.addEventListener('submit', function(e) {
                if (!loginButton.disabled) {
                    loginButton.classList.add('loading');
                    loginButton.disabled = true;
                    loginButton.querySelector('.loading-text').style.display = 'inline';
                    loginButton.querySelector('.btn-text').style.display = 'none';
                }
            });
            
            checkFormValidity();
        });
    </script>
</body>
</html>
