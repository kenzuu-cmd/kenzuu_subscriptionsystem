@page
@model ASIGNAR_SubscriptionSystem.Pages.Notifications.DeleteModel
@{
    ViewData["Title"] = "Delete Notification";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="glass-card p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0 text-danger">
                        <i class="bi bi-trash-fill me-2"></i>Delete Notification
                    </h1>
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>

                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Are you sure you want to delete this notification? This action cannot be undone.
                </div>

                <div class="card bg-dark border-secondary mb-4">
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-3">Type</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-@(Model.Notification.Type == "error" ? "danger" : Model.Notification.Type == "warning" ? "warning" : Model.Notification.Type == "success" ? "success" : "info")">
                                    @Model.Notification.Type
                                </span>
                            </dd>

                            <dt class="col-sm-3">Title</dt>
                            <dd class="col-sm-9">@Model.Notification.Title</dd>

                            <dt class="col-sm-3">Message</dt>
                            <dd class="col-sm-9">@Model.Notification.Message</dd>

                            <dt class="col-sm-3">Priority</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-@(Model.Notification.Priority == "high" ? "danger" : Model.Notification.Priority == "medium" ? "warning" : "secondary")">
                                    @Model.Notification.Priority
                                </span>
                            </dd>

                            <dt class="col-sm-3">Subscription</dt>
                            <dd class="col-sm-9">@(Model.Notification.Subscription?.ServiceName ?? "N/A")</dd>

                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">
                                @if (Model.Notification.IsRead)
                                {
                                    <span class="badge bg-success">Read</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Unread</span>
                                }
                            </dd>

                            <dt class="col-sm-3">Created</dt>
                            <dd class="col-sm-9">@Model.Notification.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")</dd>
                        </dl>
                    </div>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Notification.Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill me-2"></i>Delete Notification
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
