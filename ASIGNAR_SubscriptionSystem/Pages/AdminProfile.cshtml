@page
@model ASIGNAR_SubscriptionSystem.Pages.AdminProfileModel
@{
    ViewData["Title"] = "Admin Profile Settings";
}

<style>
    body {
        background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
        min-height: 100vh;
    }
    
    .profile-card {
        background: #1a1a2e;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    }
    
    .profile-header {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border-radius: 20px 20px 0 0;
        padding: 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .profile-header h2 {
        color: #ffffff;
        font-weight: 700;
        font-size: 1.875rem;
        margin: 0;
    }
    
    .profile-body {
        padding: 2rem;
    }
    
    .alert-success {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        color: #86efac;
        border-radius: 12px;
    }
    
    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #fca5a5;
        border-radius: 12px;
    }
    
    .profile-section-title {
        color: #9ca3af;
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .profile-section-title i {
        color: #6366f1;
    }
    
    .form-label {
        color: #e5e7eb;
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 0.9375rem;
    }
    
    .form-control {
        background: #0f1419;
        border: 2px solid #374151;
        color: #ffffff;
        border-radius: 10px;
        padding: 0.875rem 1rem;
        transition: all 0.3s ease;
    }
    
    .form-control::placeholder {
        color: #6b7280;
    }
    
    .form-control:focus {
        background: #111827;
        border-color: #6366f1;
        color: #ffffff;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        outline: none;
    }
    
    .form-control:disabled,
    .form-control[readonly] {
        background: #1f2937;
        border-color: #374151;
        color: #9ca3af;
        cursor: not-allowed;
    }
    
    .text-danger {
        color: #f87171 !important;
        font-size: 0.875rem;
        margin-top: 0.375rem;
        display: block;
    }
    
    .btn-outline-secondary {
        border: 2px solid #374151;
        color: #e5e7eb;
        background: transparent;
        font-weight: 600;
        border-radius: 10px;
        padding: 0.75rem 2rem;
        transition: all 0.3s ease;
    }
    
    .btn-outline-secondary:hover {
        background: rgba(55, 65, 81, 0.3);
        border-color: #4b5563;
        color: #ffffff;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border: none;
        color: #ffffff;
        font-weight: 700;
        border-radius: 10px;
        padding: 0.75rem 2rem;
        box-shadow: 0 4px 16px rgba(99, 102, 241, 0.4);
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #4f46e5, #7c3aed);
        box-shadow: 0 6px 20px rgba(99, 102, 241, 0.5);
        transform: translateY(-1px);
    }
    
    .mb-4 {
        margin-bottom: 2rem !important;
    }
    
    .mb-3 {
        margin-bottom: 1.5rem !important;
    }
</style>
<div class="admin-profile-container">
    <div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="profile-card">
                <div class="profile-header">
                    <h2 class="d-flex align-items-center gap-2">
                        <i class="bi bi-person-gear"></i>
                        Admin Profile Settings
                    </h2>
                </div>
                <div class="profile-body">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    <form method="post">
                        <div class="mb-4">
                            <h5 class="profile-section-title">
                                <i class="bi bi-info-circle"></i>
                                Account Information
                            </h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ProfileData.Username" class="form-label fw-semibold">Username</label>
                                    <input asp-for="ProfileData.Username" class="form-control" readonly style="background-color: #f8f9fa;" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ProfileData.Email" class="form-label fw-semibold">Email</label>
                                    <input asp-for="ProfileData.Email" class="form-control" placeholder="admin@subwise.com" />
                                    <span asp-validation-for="ProfileData.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <h5 class="profile-section-title">
                                <i class="bi bi-person-badge"></i>
                                Personal Information
                            </h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ProfileData.FirstName" class="form-label fw-semibold">First Name</label>
                                    <input asp-for="ProfileData.FirstName" class="form-control" placeholder="Enter first name" />
                                    <span asp-validation-for="ProfileData.FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ProfileData.LastName" class="form-label fw-semibold">Last Name</label>
                                    <input asp-for="ProfileData.LastName" class="form-control" placeholder="Enter last name" />
                                    <span asp-validation-for="ProfileData.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <h5 class="profile-section-title">
                                <i class="bi bi-shield-lock"></i>
                                Change Password
                            </h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ProfileData.CurrentPassword" class="form-label fw-semibold">Current Password</label>
                                    <input asp-for="ProfileData.CurrentPassword" class="form-control" placeholder="Enter current password" />
                                    <span asp-validation-for="ProfileData.CurrentPassword" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ProfileData.NewPassword" class="form-label fw-semibold">New Password</label>
                                    <input asp-for="ProfileData.NewPassword" class="form-control" placeholder="Enter new password" />
                                    <span asp-validation-for="ProfileData.NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-page="/Home" class="btn btn-outline-secondary px-4">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4" style="background: linear-gradient(135deg, #6366f1, #8b5cf6); border: none;">
                                <i class="bi bi-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
