    <script>
        // Scroll to top on page load/refresh
        window.onbeforeunload = function () {
            window.scrollTo(0, 0);
        };
        
        // Ensure page starts at top
        if (history.scrollRestoration) {
            history.scrollRestoration = 'manual';
        }
        
        window.addEventListener('load', function() {
            setTimeout(function() {
                window.scrollTo(0, 0);
            }, 0);
        });
    </script>
}
